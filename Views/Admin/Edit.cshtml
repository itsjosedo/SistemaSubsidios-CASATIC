@model BeneficiarioViewModel 

@{
    ViewData["Title"] = "Editar beneficiario";
    Layout = ViewBag.Layout ?? "_Layout";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow border-0">
            <div class="card-header bg-warning text-white py-3">
                <h3 class="card-title mb-0 text-center">
                    <i class="fas fa-edit me-2"></i>@ViewData["Title"]
                </h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                    <input type="hidden" asp-for="Id_Beneficiario" />
                    @Html.AntiForgeryToken()

                    <!-- Mensajes de éxito/error -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            <strong>¡Éxito!</strong> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <strong>Error:</strong> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Validation Summary -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-warning alert-dismissible fade show">
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        <h6 class="alert-heading mb-2">
                            <i class="fas fa-exclamation-triangle me-2"></i>Por favor corrige los siguientes errores:
                        </h6>
                        <ul class="mb-0 ps-3">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>

                    <!-- Información Personal -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-warning border-bottom pb-2">
                                <i class="fas fa-id-card me-2"></i>Información personal
                            </h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Nombre" class="form-label fw-semibold">Nombre completo *</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre completo" />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Dui" class="form-label fw-semibold">DUI *</label>
                            <input asp-for="Dui" class="form-control" placeholder="00000000-0" />
                            <span asp-validation-for="Dui" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Telefono" class="form-label fw-semibold">Teléfono *</label>
                            <input asp-for="Telefono" class="form-control" placeholder="70000000" />
                            <span asp-validation-for="Telefono" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="EntidadId" class="form-label fw-semibold">Entidad asignada</label>
                            <select asp-for="EntidadId" asp-items="ViewBag.Entidades" class="form-select">
                                <option value="">-- Seleccione una entidad --</option>
                            </select>
                            <span asp-validation-for="EntidadId" class="text-danger small"></span>
                            <div class="form-text">Opcional: Asigne este beneficiario a una entidad</div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Direccion" class="form-label fw-semibold">Dirección completa *</label>
                        <textarea asp-for="Direccion" class="form-control" rows="3" placeholder="Ingrese la dirección completa"></textarea>
                        <span asp-validation-for="Direccion" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="EstadoSubsidio" class="form-label fw-semibold">Estado del subsidio *</label>
                        <select asp-for="EstadoSubsidio" class="form-select">
                            <option value="Pendiente">Pendiente</option>
                            <option value="Activo">Activo</option>
                            <option value="Inactivo">Inactivo</option>
                            <option value="Rechazado">Rechazado</option>
                            <option value="Aprobado">Aprobado</option>
                        </select>
                        <span asp-validation-for="EstadoSubsidio" class="text-danger small"></span>
                        <div class="form-text">Seleccione el estado actual del subsidio</div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                            <i class="fas fa-arrow-left me-2"></i>Volver al listado
                        </a>
                        <button type="submit" class="btn btn-warning px-4">
                            <i class="fas fa-save me-2"></i>Guardar cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Mostrar mensajes Toast
            if ('@TempData["SuccessMessage"]' !== '') {
                toastr.success('@TempData["SuccessMessage"]', '¡Éxito!', {
                    timeOut: 3000,
                    progressBar: true
                });
            }
            
            if ('@TempData["ErrorMessage"]' !== '') {
                toastr.error('@TempData["ErrorMessage"]', 'Error', {
                    timeOut: 5000,
                    progressBar: true
                });
            }

            // Auto-ocultar alertas después de 5 segundos
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
}
@model Beneficiario

@{
    ViewData["Title"] = "Eliminar beneficiario";
    Layout = ViewBag.Layout ?? "_Layout";
    var tieneSubsidios = ViewBag.TieneSubsidios as bool? ?? false;
    var subsidiosCount = ViewBag.SubsidiosCount as int? ?? 0;
    var subsidiosNombres = ViewBag.SubsidiosNombres as List<string> ?? new List<string>();
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow border-0">
            <div class="card-header bg-danger text-white py-3">
                <h3 class="card-title mb-0 text-center">
                    <i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]
                </h3>
            </div>
            <div class="card-body p-4">
                
                @if (tieneSubsidios)
                {
                    <div class="alert alert-danger">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-ban fa-2x me-3"></i>
                            <div>
                                <h5 class="alert-heading mb-2">‚ö†Ô∏è No se puede eliminar</h5>
                                <p class="mb-2">Este beneficiario tiene <strong>@subsidiosCount subsidio(s) asignado(s)</strong> y no puede ser eliminado.</p>
                                <p class="mb-0">
                                    Debe primero desasignarlo de los siguientes subsidios:
                                    @foreach (var nombre in subsidiosNombres)
                                    {
                                        <span class="badge bg-warning text-dark ms-2">@nombre</span>
                                    }
                                    @if (subsidiosCount > 3)
                                    {
                                        <span class="text-muted">y @(subsidiosCount - 3) m√°s...</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning text-center">
                        <i class="fas fa-exclamation-circle fa-2x mb-3"></i>
                        <h5 class="alert-heading">¬øEst√° seguro que desea eliminar este beneficiario?</h5>
                        <p class="mb-0">Esta acci√≥n no se puede deshacer.</p>
                    </div>
                }

                <div class="card mb-4">
                    <div class="card-body text-center">
                        <div class="avatar-initials bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" 
                             style="width: 80px; height: 80px; font-weight: 600; font-size: 1.5rem;">
                            @GetInitials(Model.Nombre)
                        </div>
                        <h4 class="mb-3">@Model.Nombre</h4>
                        
                        <div class="row text-start">
                            <div class="col-md-6 mb-2">
                                <i class="fas fa-address-card me-2 text-muted"></i>
                                <strong>DUI:</strong> @Model.Dui
                            </div>
                            <div class="col-md-6 mb-2">
                                <i class="fas fa-phone me-2 text-muted"></i>
                                <strong>Tel√©fono:</strong> @Model.Telefono
                            </div>
                            <div class="col-12 mb-2">
                                <i class="fas fa-map-marker-alt me-2 text-muted"></i>
                                <strong>Direcci√≥n:</strong> @Model.Direccion
                            </div>
                            <div class="col-md-6 mb-2">
                                <i class="fas fa-venus-mars me-2 text-muted"></i>
                                <strong>G√©nero:</strong> @Model.Genero
                            </div>
                            <div class="col-md-6 mb-2">
                                <i class="fas fa-calendar me-2 text-muted"></i>
                                <strong>Estado:</strong>
                                <span class="badge @GetEstadoBadgeClass(Model.EstadoSubsidio)">
                                    @Model.EstadoSubsidio
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <!-- üî¥ CAMBIADO: Ahora apunta a Admin/Index -->
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary me-md-2">
                        <i class="fas fa-arrow-left me-2"></i>Volver a la lista
                    </a>
                    
                    @if (!tieneSubsidios)
                    {
                        <!-- üî¥ CAMBIADO: Ahora apunta a Admin/Delete -->
                        <form asp-controller="Admin" asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" asp-for="Id_Beneficiario" />
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Eliminar definitivamente
                            </button>
                        </form>
                    }
                    else
                    {
                        <button type="button" class="btn btn-danger" disabled>
                            <i class="fas fa-ban me-2"></i>No se puede eliminar
                        </button>
                    }
                </div>

            </div>
        </div>
    </div>
</div>

@functions {
    public string GetInitials(string nombre)
    {
        if (string.IsNullOrEmpty(nombre)) return "??";
        var partes = nombre.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (partes.Length >= 2)
        {
            // CAMBIO AQU√ç: usar 'partes' en lugar de 'palabras'
            return $"{partes[0][0]}{partes[1][0]}".ToUpper();
        }
        return nombre.Length >= 2 ? nombre.Substring(0, 2).ToUpper() : nombre.ToUpper();
    }

    public string GetEstadoBadgeClass(string estado)
    {
        if (string.IsNullOrEmpty(estado)) return "bg-secondary";
        return estado.ToLower() switch
        {
            "activo" => "bg-success",
            "pendiente" => "bg-warning",
            "inactivo" => "bg-secondary",
            "rechazado" => "bg-danger",
            "aprobado" => "bg-info",
            _ => "bg-secondary"
        };
    }
}
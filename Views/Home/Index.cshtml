@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}

<div class="welcome-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="welcome-card">
                    <h1 class="welcome-title">¡Bienvenido, @User.Identity.Name!</h1>
                    <p class="welcome-message">Has iniciado sesión exitosamente en SistemasSubsidios</p>
                    
                    <div class="features-grid">
                        <div class="feature-card">
                            <div class="feature-icon">
                                <i class="fas fa-hand-holding-usd"></i>
                            </div>
                            <h5>Gestión de Subsidios</h5>
                            <p>Administra y consulta los subsidios disponibles</p>
                        </div>
                        
                        <div class="feature-card">
                            <div class="feature-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <h5>Beneficiarios</h5>
                            <p>Gestiona la información de los beneficiarios</p>
                        </div>
                        
                        <div class="feature-card">
                            <div class="feature-icon">
                                <i class="fas fa-chart-bar"></i>
                            </div>
                            <h5>Reportes</h5>
                            <p>Genera reportes y estadísticas</p>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <a href="#" class="btn btn-primary me-2">
                            <i class="fas fa-rocket me-2"></i>Comenzar
                        </a>
                        <a href="#" class="btn btn-outline-primary">
                            <i class="fas fa-question-circle me-2"></i>Ayuda
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
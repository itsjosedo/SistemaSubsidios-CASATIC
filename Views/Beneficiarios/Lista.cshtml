@model IEnumerable<Beneficiario>
@{
    ViewData["Title"] = "Lista de beneficiarios";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="fas fa-users me-2"></i>@ViewData["Title"]
        </h1>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <!-- üíª VISTA DESKTOP (Tabla completa) -->
                <div class="table-responsive d-none d-lg-block">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>DUI</th>
                                <th>Tel√©fono</th>
                                <th>Direcci√≥n</th>
                                <th>Entidad</th>
                                <th>Estado subsidio</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var beneficiario in Model)
                            {
                                <tr>
                                    <td>@beneficiario.Nombre</td>
                                    <td>@beneficiario.Dui</td>
                                    <td>@beneficiario.Telefono</td>
                                    <td>@beneficiario.Direccion</td>
                                    <td>@beneficiario.Entidad?.Nombre</td>
                                    <td>
                                        <span class="badge bg-info">@beneficiario.EstadoSubsidio</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- üì± VISTA M√ìVIL (Lista expandible) -->
                <div class="d-lg-none">
                    @foreach (var beneficiario in Model)
                    {
                        var itemId = $"beneficiario-{beneficiario.Id_Beneficiario}";
                        
                        <div class="border-bottom beneficiario-item">
                            <!-- Fila principal (siempre visible) -->
                            <div class="p-3 cursor-pointer" data-bs-toggle="collapse" data-bs-target="#@itemId" aria-expanded="false">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1 fw-bold">@beneficiario.Nombre</h6>
                                        <div class="d-flex align-items-center gap-2 flex-wrap">
                                            <span class="badge bg-info">@beneficiario.EstadoSubsidio</span>
                                            <small class="text-muted">@beneficiario.Dui</small>
                                        </div>
                                    </div>
                                    <i class="fas fa-chevron-down text-muted ms-2"></i>
                                </div>
                            </div>

                            <!-- Detalles expandibles -->
                            <div class="collapse" id="@itemId">
                                <div class="px-3 pb-3 bg-light">
                                    <div class="mb-2">
                                        <small class="text-muted d-block">DUI</small>
                                        <strong>@beneficiario.Dui</strong>
                                    </div>
                                    <div class="mb-2">
                                        <small class="text-muted d-block">Tel√©fono</small>
                                        <strong>@beneficiario.Telefono</strong>
                                    </div>
                                    <div class="mb-2">
                                        <small class="text-muted d-block">Direcci√≥n</small>
                                        <strong>@beneficiario.Direccion</strong>
                                    </div>
                                    <div class="mb-2">
                                        <small class="text-muted d-block">Entidad</small>
                                        <strong>@beneficiario.Entidad?.Nombre</strong>
                                    </div>
                                    <div class="mb-0">
                                        <small class="text-muted d-block">Estado subsidio</small>
                                        <span class="badge bg-info">@beneficiario.EstadoSubsidio</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-users-slash fa-3x text-muted mb-3"></i>
                    <h5>No hay beneficiarios registrados</h5>
                    <p class="text-muted">No se encontraron beneficiarios en el sistema.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Animar el √≠cono de chevron cuando se expande/colapsa
        document.addEventListener('DOMContentLoaded', function() {
            const collapseElements = document.querySelectorAll('.collapse');
            collapseElements.forEach(function(element) {
                element.addEventListener('show.bs.collapse', function() {
                    const chevron = this.previousElementSibling.querySelector('.fa-chevron-down');
                    if (chevron) chevron.classList.add('rotate-180');
                });
                element.addEventListener('hide.bs.collapse', function() {
                    const chevron = this.previousElementSibling.querySelector('.fa-chevron-down');
                    if (chevron) chevron.classList.remove('rotate-180');
                });
            });
        });
    </script>
    
    <style>
        .cursor-pointer {
            cursor: pointer;
        }
        .fa-chevron-down {
            transition: transform 0.3s ease;
        }
        .rotate-180 {
            transform: rotate(180deg);
        }
        .beneficiario-item:hover {
            background-color: #f8f9fa;
        }
    </style>
}
@model List<Log>

@{
    ViewData["Title"] = "Registro de Actividades";
}

<div class="container py-4">

    <h2 class="text-center mb-4 fw-bold">Registro de Actividades</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No hay registros por el momento.
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var log in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 log-card h-100">
                        <div class="card-body">

                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge bg-primary">ID Usuario: @log.UsuarioId</span>
                                <small class="text-muted">@log.Fecha.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>

                            <h5 class="card-title fw-bold text-dark">
                                @log.Accion
                            </h5>

                            @if (!string.IsNullOrEmpty(log.Datos))
                            {
                                <p class="text-muted mt-2">
                                    <i class="fas fa-info-circle me-1"></i> @log.Datos
                                </p>
                            }

                            <div class="mt-3">
                                <span class="badge bg-secondary">
                                    <i class="fas fa-map-marker-alt"></i> IP: @log.Ip
                                </span>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .log-card {
        border-radius: 15px;
        transition: transform .15s ease-in-out, box-shadow .15s ease-in-out;
    }

    .log-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 18px rgba(0,0,0,0.15);
    }

    @@media (max-width: 576px) {
        h2 {
            font-size: 1.4rem;
        }

        .card-title {
            font-size: 1.1rem;
        }
    }
</style>

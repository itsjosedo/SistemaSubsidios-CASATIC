@model Subsidio

@{
    ViewData["Title"] = "Detalles del Subsidio";
    Layout = ViewBag.Layout ?? "_LayoutBeneficario";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Detalles del Subsidio</h5>
            <a asp-controller="Beneficiarios" asp-action="Index" class="btn btn-light btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Volver
            </a>
        </div>
        <div class="card-body">
            <p><strong>Programa:</strong> @Model.NombrePrograma</p>
            <p><strong>Tipo:</strong> @Model.Tipo</p>
            <p><strong>Monto:</strong> $@Model.Monto.ToString("N2")</p>
            <p><strong>Fecha de Asignaci√≥n:</strong> @Model.FechaAsignacion.ToString("dd/MM/yyyy")</p>
            <p><strong>Estado:</strong> 
                <span class="badge bg-@(Model.Estado == "Activo" ? "success" : Model.Estado == "Pendiente" ? "warning" : "danger")">
                    @Model.Estado
                </span>
            </p>
            @if (Model.Beneficiario?.Entidad != null)
            {
                <p><strong>Entidad Asignada:</strong> @Model.Beneficiario.Entidad.Nombre</p>
            }
        </div>
    </div>
</div>

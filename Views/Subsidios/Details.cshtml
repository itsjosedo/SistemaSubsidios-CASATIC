@model Subsidio
@{
    ViewData["Title"] = "Detalle del subsidio";
    Layout = ViewBag.Layout ?? "_Layout";
    
    // üîπ OBTENER informaci√≥n de eliminaci√≥n si existe
    var estaEliminado = ViewBag.EstaEliminado as bool? ?? false;
    var motivoEliminacion = ViewBag.MotivoEliminacion as string;
    var fechaEliminacion = ViewBag.FechaEliminacion as DateTime?;
    var usuarioEliminacionId = ViewBag.UsuarioEliminacionId as string;
}

<div class="container-fluid px-4">
    <!-- üîπ ALERTA DE SUBSIDIO ELIMINADO (solo si est√° eliminado) -->
    @if (estaEliminado)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert" style="border-left: 5px solid #dc3545;">
            <div class="d-flex align-items-center">
                <i class="fas fa-trash-alt fa-2x me-3 text-danger"></i>
                <div class="flex-grow-1">
                    <h4 class="alert-heading mb-2">
                        <i class="fas fa-exclamation-triangle me-2"></i>SUBSIDIO ELIMINADO
                    </h4>
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-1">
                                <strong><i class="fas fa-calendar-times me-1"></i>Fecha eliminaci√≥n:</strong> 
                                @(fechaEliminacion?.ToString("dd/MM/yyyy HH:mm") ?? "No disponible")
                            </p>
                            <p class="mb-1">
                                <strong><i class="fas fa-user me-1"></i>Usuario que elimin√≥:</strong> 
                                @(usuarioEliminacionId ?? "No disponible")
                            </p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-1">
                                <strong><i class="fas fa-comment-dots me-1"></i>Motivo:</strong>
                            </p>
                            <p class="mb-0 bg-light p-2 rounded border">
                                @(string.IsNullOrEmpty(motivoEliminacion) ? "Sin motivo especificado" : motivoEliminacion)
                            </p>
                        </div>
                    </div>
                    <div class="mt-2">
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>Este subsidio est√° marcado como "eliminado" (borrado l√≥gico) pero conserva todos los datos para auditor√≠a.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4 no-print">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-file-invoice-dollar me-2 text-info"></i>@ViewData["Title"]
                @if (estaEliminado)
                {
                    <span class="badge bg-danger ms-2">
                        <i class="fas fa-trash-alt me-1"></i>Eliminado
                    </span>
                }
            </h1>
            <p class="mb-0 text-muted">
                Informaci√≥n detallada del subsidio registrado
                @if (estaEliminado)
                {
                    <span class="text-danger fw-bold"> ‚Ä¢ ESTADO: ELIMINADO</span>
                }
            </p>
        </div>
        <div class="btn-group">
            @if (!estaEliminado)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-icon-split shadow-sm">
                    <span class="icon text-white-50">
                        <i class="fas fa-edit"></i>
                    </span>
                    <span class="text">Editar</span>
                </a>
            }
            
            @if (estaEliminado && (User.IsInRole("Administrador") || User.IsInRole("Admin")))
            {
                <a asp-action="Eliminados" class="btn btn-secondary btn-icon-split shadow-sm">
                    <span class="icon text-white-50">
                        <i class="fas fa-arrow-left"></i>
                    </span>
                    <span class="text">Volver a Eliminados</span>
                </a>
            }
            else
            {
                <a asp-action="Index" class="btn btn-secondary btn-icon-split shadow-sm @(estaEliminado ? "" : "ms-2")">
                    <span class="icon text-white-50">
                        <i class="fas fa-arrow-left"></i>
                    </span>
                    <span class="text">Volver a la lista</span>
                </a>
            }
            
            <!-- üîπ BOT√ìN DE RESTAURACI√ìN (solo para administradores si est√° eliminado) -->
            @if (estaEliminado && (User.IsInRole("Administrador") || User.IsInRole("Admin")))
            {
                <form asp-action="Restaurar" method="post" class="d-inline ms-2">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-success btn-icon-split shadow-sm" 
                            onclick="return confirm('¬øRestaurar el subsidio \'@Model.NombrePrograma\'?\\n\\nSe reactivar√° y volver√° a la lista de subsidios activos.')">
                        <span class="icon text-white-50">
                            <i class="fas fa-trash-restore"></i>
                        </span>
                        <span class="text">Restaurar</span>
                    </button>
                </form>
            }
        </div>
    </div>

    <!-- Header para impresi√≥n -->
    <div class="print-header text-center mb-3 only-print">
        <h2 class="mb-1">DETALLE DE SUBSIDIO</h2>
        @if (estaEliminado)
        {
            <p class="mb-1 text-danger">
                <i class="fas fa-exclamation-triangle me-1"></i><strong>ESTADO: ELIMINADO</strong>
            </p>
        }
        <p class="mb-1 text-muted">Sistema de gesti√≥n de subsidios</p>
        <div class="border-top pt-2">
            <small class="text-muted">Generado el: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</small>
        </div>
    </div>

    <!-- üîπ INFORMACI√ìN DE ELIMINACI√ìN PARA IMPRESI√ìN -->
    @if (estaEliminado)
    {
        <div class="card shadow mb-4 only-print border-danger">
            <div class="card-header py-2 bg-danger text-white">
                <h6 class="m-0 font-weight-bold">
                    <i class="fas fa-trash-alt me-2"></i>INFORMACI√ìN DE ELIMINACI√ìN
                </h6>
            </div>
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-md-6">
                        <p class="mb-1">
                            <strong>Fecha eliminaci√≥n:</strong> @(fechaEliminacion?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")
                        </p>
                        <p class="mb-1">
                            <strong>Usuario:</strong> @(usuarioEliminacionId ?? "N/A")
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-1"><strong>Motivo:</strong></p>
                        <p class="mb-0">@(motivoEliminacion ?? "Sin motivo especificado")</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <!-- Card de informaci√≥n principal -->
            <div class="card shadow mb-4 print-section @(estaEliminado ? "border-danger" : "")">
                <div class="card-header py-3 @(estaEliminado ? "bg-danger" : "bg-info") print-section-header">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-info-circle me-2"></i>Informaci√≥n del subsidio
                        @if (estaEliminado)
                        {
                            <span class="badge bg-dark ms-2">ELIMINADO</span>
                        }
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-item mb-4">
                                <label class="fw-bold text-primary mb-2">
                                    <i class="fas fa-tag me-2"></i>Nombre del programa
                                </label>
                                <div class="p-3 bg-light rounded border print-field">
                                    <h5 class="mb-0 text-dark">@Model.NombrePrograma</h5>
                                </div>
                            </div>

                            <div class="info-item mb-4">
                                <label class="fw-bold text-primary mb-2">
                                    <i class="fas fa-list-alt me-2"></i>Tipo de subsidio
                                </label>
                                <div class="p-3 bg-light rounded border print-field">
                                    <span class="badge bg-info text-white fs-6">
                                        <i class="fas fa-tags me-1"></i>@Model.Tipo
                                    </span>
                                </div>
                            </div>

                            <div class="info-item mb-4">
                                <label class="fw-bold text-primary mb-2">
                                    <i class="fas fa-dollar-sign me-2"></i>Monto asignado
                                </label>
                                <div class="p-3 bg-light rounded border print-field">
                                    <h4 class="mb-0 text-success">
                                        $@Model.Monto.ToString("N2")
                                    </h4>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-item mb-4">
                                <label class="fw-bold text-primary mb-2">
                                    <i class="fas fa-calendar me-2"></i>Fecha de asignaci√≥n
                                </label>
                                <div class="p-3 bg-light rounded border print-field">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-calendar-day text-muted me-2"></i>
                                        <span class="fs-6">@Model.FechaAsignacion.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </div>
                            </div>

                            <div class="info-item mb-4">
                                <label class="fw-bold text-primary mb-2">
                                    <i class="fas fa-toggle-on me-2"></i>Estado actual
                                </label>
                                <div class="p-3 bg-light rounded border print-field">
                                    @{
                                        var estadoClass = Model.Estado?.ToLower() switch
                                        {
                                            "activo" or "aprobado" => "bg-success",
                                            "pendiente" => "bg-warning",
                                            "rechazado" => "bg-danger",
                                            "finalizado" => "bg-info",
                                            "inactivo" => "bg-secondary",
                                            _ => "bg-secondary"
                                        };

                                        var estadoIcon = Model.Estado?.ToLower() switch
                                        {
                                            "activo" or "aprobado" => "fa-check-circle",
                                            "pendiente" => "fa-clock",
                                            "rechazado" => "fa-times-circle",
                                            "finalizado" => "fa-flag-checkered",
                                            "inactivo" => "fa-ban",
                                            _ => "fa-question"
                                        };
                                    }
                                    <span class="badge @estadoClass text-white fs-6 p-2">
                                        <i class="fas @estadoIcon me-1"></i>@Model.Estado
                                        @if (estaEliminado)
                                        {
                                            <span class="ms-1">(Eliminado)</span>
                                        }
                                    </span>
                                </div>
                            </div>

                            <div class="info-item">
                                <label class="fw-bold text-primary mb-2">
                                    <i class="fas fa-hashtag me-2"></i>ID del Subsidio
                                </label>
                                <div class="p-3 bg-light rounded border print-field">
                                    <code class="fs-6 text-muted">#@Model.Id</code>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- üîπ SECCI√ìN ADICIONAL PARA SUBSIDIOS ELIMINADOS -->
                    @if (estaEliminado)
                    {
                        <div class="mt-4 pt-3 border-top">
                            <h6 class="text-danger mb-3">
                                <i class="fas fa-history me-2"></i>Informaci√≥n de auditor√≠a
                            </h6>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="bg-light p-3 rounded border">
                                        <small class="text-muted d-block">Fecha eliminaci√≥n</small>
                                        <strong>@(fechaEliminacion?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</strong>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="bg-light p-3 rounded border">
                                        <small class="text-muted d-block">Usuario que elimin√≥</small>
                                        <strong>@(usuarioEliminacionId ?? "N/A")</strong>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="bg-light p-3 rounded border">
                                        <small class="text-muted d-block">Tiempo transcurrido</small>
                                        <strong>
                                            @if (fechaEliminacion.HasValue)
                                            {
                                                var dias = (DateTime.Now - fechaEliminacion.Value).Days;
                                                @($"{dias} d√≠as")
                                            }
                                            else
                                            {
                                                @("N/A")
                                            }
                                        </strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Card de informaci√≥n de beneficiarios -->
            <div class="card shadow mb-4 print-section">
                <div class="card-header py-3 bg-primary print-section-header">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-users me-2"></i>Beneficiarios asignados (@Model.Beneficiarios.Count)
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.Beneficiarios.Any())
                    {
                        <div class="beneficiarios-list">
                            @foreach (var beneficiario in Model.Beneficiarios)
                            {
                                <div class="beneficiario-item border rounded p-3 mb-3">
                                    <div class="d-flex align-items-start">
                                        <div class="avatar-initials bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3"
                                             style="width: 50px; height: 50px; font-size: 1rem; font-weight: 600;">
                                            @GetInitials(beneficiario.Nombre)
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="text-primary mb-2">@beneficiario.Nombre</h6>
                                            
                                            <div class="beneficiary-details">
                                                <div class="detail-item mb-1">
                                                    <i class="fas fa-id-card text-muted me-2"></i>
                                                    <small class="text-dark">@beneficiario.Dui</small>
                                                </div>
                                                
                                                @if (!string.IsNullOrEmpty(beneficiario.Telefono))
                                                {
                                                    <div class="detail-item mb-1">
                                                        <i class="fas fa-phone text-muted me-2"></i>
                                                        <small class="text-dark">@beneficiario.Telefono</small>
                                                    </div>
                                                }
                                                
                                                @if (!string.IsNullOrEmpty(beneficiario.Direccion))
                                                {
                                                    <div class="detail-item mb-1">
                                                        <i class="fas fa-map-marker-alt text-muted me-2"></i>
                                                        <small class="text-dark">@beneficiario.Direccion</small>
                                                    </div>
                                                }

                                                @if (!string.IsNullOrEmpty(beneficiario.Genero))
                                                {
                                                    <div class="detail-item mb-1">
                                                        <i class="fas fa-venus-mars text-muted me-2"></i>
                                                        <small class="text-dark">@beneficiario.Genero</small>
                                                    </div>
                                                }

                                                @if (!string.IsNullOrEmpty(beneficiario.EstadoSubsidio))
                                                {
                                                    <div class="detail-item">
                                                        @{
                                                            var benefEstadoClass = beneficiario.EstadoSubsidio?.ToLower() switch
                                                            {
                                                                "activo" => "bg-success",
                                                                "pendiente" => "bg-warning",
                                                                "inactivo" => "bg-secondary",
                                                                _ => "bg-secondary"
                                                            };
                                                        }
                                                        <span class="badge @benefEstadoClass">
                                                            @beneficiario.EstadoSubsidio
                                                        </span>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-user-slash fa-3x text-muted mb-3"></i>
                            <p class="text-muted mb-3">No hay beneficiarios asignados</p>
                            @if (!estaEliminado)
                            {
                                <a asp-action="GestionarBeneficiarios" asp-route-id="@Model.Id" class="btn btn-success btn-sm">
                                    <i class="fas fa-user-plus me-2"></i>Asignar beneficiarios
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Card de acciones r√°pidas -->
            <div class="card shadow no-print">
                <div class="card-header py-3 @(estaEliminado ? "bg-danger text-white" : "bg-light")">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-bolt me-2"></i>Acciones r√°pidas
                        @if (estaEliminado)
                        {
                            <span class="badge bg-warning text-dark ms-2">ELIMINADO</span>
                        }
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (!estaEliminado)
                        {
                            <a asp-action="GestionarBeneficiarios" asp-route-id="@Model.Id" class="btn btn-success btn-lg">
                                <i class="fas fa-users me-2"></i>Gestionar beneficiarios
                            </a>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="fas fa-edit me-2"></i>Editar subsidio
                            </a>
                        }
                        
                        @if (estaEliminado && (User.IsInRole("Administrador") || User.IsInRole("Admin")))
                        {
                            <form asp-action="Restaurar" method="post" class="d-grid">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-success btn-lg" 
                                        onclick="return confirm('¬øRestaurar el subsidio \'@Model.NombrePrograma\'?\\n\\nSe reactivar√° y volver√° a la lista de subsidios activos.')">
                                    <i class="fas fa-trash-restore me-2"></i>Restaurar Subsidio
                                </button>
                            </form>
                            
                            <a asp-action="Eliminados" class="btn btn-secondary">
                                <i class="fas fa-history me-2"></i>Volver al Historial
                            </a>
                        }
                        else if (!estaEliminado)
                        {
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-list me-2"></i>Ver Todos los subsidios
                            </a>
                        }
                        
                        <a href="#" class="btn btn-outline-info" onclick="window.print()">
                            <i class="fas fa-print me-2"></i>Imprimir detalles
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Secci√≥n de informaci√≥n adicional -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow print-section activity-summary @(estaEliminado ? "border-danger" : "")">
                <div class="card-header py-3 @(estaEliminado ? "bg-danger text-white" : "bg-light") print-section-header">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-history me-2"></i>Resumen de actividad
                        @if (estaEliminado)
                        {
                            <span class="badge bg-dark ms-2">ELIMINADO</span>
                        }
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <div class="border rounded p-3 print-field">
                                <i class="fas fa-calendar-plus fa-2x text-primary mb-2"></i>
                                <h5 class="text-primary">Fecha de creaci√≥n</h5>
                                <p class="mb-0 text-muted">@Model.FechaAsignacion.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border rounded p-3 print-field">
                                <i class="fas fa-sync-alt fa-2x text-info mb-2"></i>
                                <h5 class="text-info">Estado actual</h5>
                                <p class="mb-0">
                                    <span class="badge @estadoClass">
                                        @Model.Estado
                                        @if (estaEliminado)
                                        {
                                            @: (Eliminado)
                                        }
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border rounded p-3 print-field">
                                <i class="fas fa-dollar-sign fa-2x text-warning mb-2"></i>
                                <h5 class="text-warning">Monto asignado</h5>
                                <p class="mb-0 text-success fw-bold">$@Model.Monto.ToString("N2")</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border rounded p-3 print-field">
                                <i class="fas fa-users fa-2x @(estaEliminado ? "text-danger" : "text-success") mb-2"></i>
                                <h5 class="@(estaEliminado ? "text-danger" : "text-success")">Beneficiarios</h5>
                                <p class="mb-0 fw-bold">@Model.Beneficiarios.Count</p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- üîπ INFORMACI√ìN ESPECIAL PARA ELIMINADOS -->
                    @if (estaEliminado && fechaEliminacion.HasValue)
                    {
                        <div class="row mt-4 pt-3 border-top">
                            <div class="col-12">
                                <h6 class="text-danger text-center mb-3">
                                    <i class="fas fa-calendar-times me-2"></i>Este subsidio fue eliminado hace @((DateTime.Now - fechaEliminacion.Value).Days) d√≠as
                                </h6>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .avatar-initials {
            font-size: 14px;
            font-weight: 600;
        }

        .beneficiario-item {
            background-color: #f8f9fc;
            border: 1px solid #e3e6f0 !important;
        }

        .beneficiary-details .detail-item {
            display: flex;
            align-items: center;
        }

        .card-header.bg-info {
            background: linear-gradient(45deg, #36b9cc, #258391) !important;
        }

        .card-header.bg-primary {
            background: linear-gradient(45deg, #4e73df, #224abe) !important;
        }
        
        .card-header.bg-danger {
            background: linear-gradient(45deg, #e74a3b, #be2617) !important;
        }

        .border {
            border: 1px solid #e3e6f0 !important;
        }

        .bg-light {
            background-color: #f8f9fc !important;
        }

        .btn-icon-split {
            padding: 0.375rem 1rem;
        }

        /* Clases para control de impresi√≥n */
        .no-print {
            display: block;
        }

        .only-print {
            display: none;
        }

        /* Estilos optimizados para impresi√≥n */
        @@media print {
            /* Ocultar elementos no necesarios */
            .no-print {
                display: none !important;
            }

            .only-print {
                display: block !important;
            }

            /* Configuraci√≥n base de impresi√≥n */
            body {
                margin: 0 !important;
                padding: 0.5cm !important;
                font-size: 12px !important;
                line-height: 1.3 !important;
                background: white !important;
                color: black !important;
            }

            .container-fluid {
                padding: 0 !important;
                margin: 0 !important;
                width: 100% !important;
            }

            .px-4 {
                padding-left: 0 !important;
                padding-right: 0 !important;
            }

            /* Header de impresi√≥n */
            .print-header {
                border-bottom: 2px solid #36b9cc;
                margin-bottom: 15px;
                padding-bottom: 10px;
                text-align: center;
            }

            .print-header h2 {
                font-size: 18px;

@model Subsidio
@{
    ViewData["Title"] = "Detalle del Subsidio";
    Layout = ViewBag.Layout ?? "_Layout";
}

<div class="container-fluid px-4">
    <!-- Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-file-invoice-dollar me-2 text-info"></i>@ViewData["Title"]
            </h1>
            <p class="mb-0 text-muted">Información detallada del subsidio registrado</p>
        </div>
        <div class="btn-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-icon-split shadow-sm">
                <span class="icon text-white-50">
                    <i class="fas fa-edit"></i>
                </span>
                <span class="text">Editar</span>
            </a>
            <a asp-action="Index" class="btn btn-secondary btn-icon-split shadow-sm ms-2">
                <span class="icon text-white-50">
                    <i class="fas fa-arrow-left"></i>
                </span>
                <span class="text">Volver a la lista</span>
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Card de información principal -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-info">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-info-circle me-2"></i>Información del Subsidio
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-item mb-4">
                                <label class="fw-bold text-primary mb-2">
                                    <i class="fas fa-tag me-2"></i>Nombre del Programa
                                </label>
                                <div class="p-3 bg-light rounded border">
                                    <h5 class="mb-0 text-dark">@Model.NombrePrograma</h5>
                                </div>
                            </div>

                            <div class="info-item mb-4">
                                <label class="fw-bold text-primary mb-2">
                                    <i class="fas fa-list-alt me-2"></i>Tipo de Subsidio
                                </label>
                                <div class="p-3 bg-light rounded border">
                                    <span class="badge bg-info text-white fs-6">
                                        <i class="fas fa-tags me-1"></i>@Model.Tipo
                                    </span>
                                </div>
                            </div>

                            <div class="info-item mb-4">
                                <label class="fw-bold text-primary mb-2">
                                    <i class="fas fa-dollar-sign me-2"></i>Monto Asignado
                                </label>
                                <div class="p-3 bg-light rounded border">
                                    <h4 class="mb-0 text-success">
                                        $@Model.Monto.ToString("N2")
                                    </h4>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-item mb-4">
                                <label class="fw-bold text-primary mb-2">
                                    <i class="fas fa-calendar me-2"></i>Fecha de Asignación
                                </label>
                                <div class="p-3 bg-light rounded border">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-calendar-day text-muted me-2"></i>
                                        <span class="fs-6">@Model.FechaAsignacion.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </div>
                            </div>

                            <div class="info-item mb-4">
                                <label class="fw-bold text-primary mb-2">
                                    <i class="fas fa-toggle-on me-2"></i>Estado Actual
                                </label>
                                <div class="p-3 bg-light rounded border">
                                    @{
                                        var estadoClass = Model.Estado?.ToLower() switch
                                        {
                                            "activo" or "aprobado" => "bg-success",
                                            "pendiente" => "bg-warning",
                                            "rechazado" => "bg-danger",
                                            "finalizado" => "bg-info",
                                            _ => "bg-secondary"
                                        };

                                        var estadoIcon = Model.Estado?.ToLower() switch
                                        {
                                            "activo" or "aprobado" => "fa-check-circle",
                                            "pendiente" => "fa-clock",
                                            "rechazado" => "fa-times-circle",
                                            "finalizado" => "fa-flag-checkered",
                                            _ => "fa-question"
                                        };
                                    }
                                    <span class="badge @estadoClass text-white fs-6 p-2">
                                        <i class="fas @estadoIcon me-1"></i>@Model.Estado
                                    </span>
                                </div>
                            </div>

                            <div class="info-item">
                                <label class="fw-bold text-primary mb-2">
                                    <i class="fas fa-hashtag me-2"></i>ID del Subsidio
                                </label>
                                <div class="p-3 bg-light rounded border">
                                    <code class="fs-6 text-muted">#@Model.Id</code>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Card de información del beneficiario -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-primary">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-user me-2"></i>Información del Beneficiario
                    </h6>
                </div>
                <div class="card-body text-center">
                    @if (Model.Beneficiario != null)
                    {
                        <div class="avatar-lg mx-auto mb-3">
                            <div class="avatar-initials bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mx-auto" 
                                 style="width: 80px; height: 80px; font-size: 2rem; font-weight: 600;">
                                @GetInitials(Model.Beneficiario.Nombre)
                            </div>
                        </div>
                        
                        <h5 class="text-primary mb-2">@Model.Beneficiario.Nombre</h5>
                        
                        <div class="beneficiary-info">
                            <div class="info-row mb-2">
                                <i class="fas fa-id-card text-muted me-2"></i>
                                <span class="text-dark">@Model.Beneficiario.Dui</span>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(Model.Beneficiario.Telefono))
                            {
                                <div class="info-row mb-2">
                                    <i class="fas fa-phone text-muted me-2"></i>
                                    <span class="text-dark">@Model.Beneficiario.Telefono</span>
                                </div>
                            }
                            
                            @if (!string.IsNullOrEmpty(Model.Beneficiario.Direccion))
                            {
                                <div class="info-row mb-2">
                                    <i class="fas fa-map-marker-alt text-muted me-2"></i>
                                    <span class="text-dark">@Model.Beneficiario.Direccion</span>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(Model.Beneficiario.EstadoSubsidio))
                            {
                                <div class="info-row">
                                    @{
                                        var benefEstadoClass = Model.Beneficiario.EstadoSubsidio?.ToLower() switch
                                        {
                                            "activo" => "bg-success",
                                            "pendiente" => "bg-warning",
                                            "inactivo" => "bg-secondary",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @benefEstadoClass">
                                        Estado: @Model.Beneficiario.EstadoSubsidio
                                    </span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-user-slash fa-3x text-muted mb-3"></i>
                            <p class="text-muted mb-0">Beneficiario no asignado</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Card de acciones rápidas -->
            <div class="card shadow">
                <div class="card-header py-3 bg-light">
                    <h6 class="m-0 font-weight-bold text-dark">
                        <i class="fas fa-bolt me-2"></i>Acciones Rápidas
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                            <i class="fas fa-edit me-2"></i>Editar Subsidio
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-2"></i>Ver Todos los Subsidios
                        </a>
                        <a href="#" class="btn btn-outline-info" onclick="window.print()">
                            <i class="fas fa-print me-2"></i>Imprimir Detalles
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección de información adicional -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3 bg-light">
                    <h6 class="m-0 font-weight-bold text-dark">
                        <i class="fas fa-history me-2"></i>Resumen de Actividad
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <div class="border rounded p-3">
                                <i class="fas fa-calendar-plus fa-2x text-primary mb-2"></i>
                                <h5 class="text-primary">Fecha de Creación</h5>
                                <p class="mb-0 text-muted">@DateTime.Now.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border rounded p-3">
                                <i class="fas fa-sync-alt fa-2x text-info mb-2"></i>
                                <h5 class="text-info">Última Actualización</h5>
                                <p class="mb-0 text-muted">@DateTime.Now.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border rounded p-3">
                                <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                                <h5 class="text-success">Estado Actual</h5>
                                <p class="mb-0">@Model.Estado</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border rounded p-3">
                                <i class="fas fa-dollar-sign fa-2x text-warning mb-2"></i>
                                <h5 class="text-warning">Monto Total</h5>
                                <p class="mb-0 text-success fw-bold">$@Model.Monto.ToString("N2")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .avatar-initials {
            font-size: 14px;
            font-weight: 600;
        }

        .avatar-lg .avatar-initials {
            font-size: 2rem;
        }

        .info-item label {
            font-size: 0.9rem;
        }

        .beneficiary-info .info-row {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card-header.bg-info {
            background: linear-gradient(45deg, #36b9cc, #258391) !important;
        }

        .card-header.bg-primary {
            background: linear-gradient(45deg, #4e73df, #224abe) !important;
        }

        .border {
            border: 1px solid #e3e6f0 !important;
        }

        .bg-light {
            background-color: #f8f9fc !important;
        }

        .btn-icon-split {
            padding: 0.375rem 1rem;
        }

        @@media print {
            .btn, .card-header.bg-info, .card-header.bg-primary {
                display: none !important;
            }
        }
    </style>
}

@functions {
    // Función para obtener las iniciales del nombre
    public string GetInitials(string nombre)
    {
        if (string.IsNullOrEmpty(nombre)) return "??";
        
        var partes = nombre.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (partes.Length >= 2)
        {
            return $"{partes[0][0]}{partes[1][0]}".ToUpper();
        }
        return nombre.Length >= 2 ? nombre.Substring(0, 2).ToUpper() : nombre.ToUpper();
    }
}
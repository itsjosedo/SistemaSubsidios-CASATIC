@model Subsidio
@{
    ViewData["Title"] = "Detalle del Subsidio";
}

<h2>Detalle del Subsidio</h2>

<table class="table">
    <tr>
        <th>Nombre del Programa</th>
        <td>@Model.NombrePrograma</td>
    </tr>
    <tr>
        <th>Tipo</th>
        <td>@Model.Tipo</td>
    </tr>
    <tr>
        <th>Beneficiario</th>
        <td>@Model.Beneficiario?.Nombre</td>
    </tr>
    <tr>
        <th>Monto</th>
        <td>@Model.Monto</td>
    </tr>
    <tr>
        <th>Fecha Asignaci√≥n</th>
        <td>@Model.FechaAsignacion.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Estado</th>
        <td>@Model.Estado</td>
    </tr>
</table>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>

@model IEnumerable<Subsidio>
@{
    ViewData["Title"] = "Subsidios Activos";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="fas fa-hand-holding-usd me-2"></i>@ViewData["Title"]
        </h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Volver a Subsidios
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Programa</th>
                                <th>Tipo</th>
                                <th>Monto</th>
                                <th>Beneficiario</th>
                                <th>Fecha Asignaci√≥n</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var subsidio in Model)
                            {
                                <tr>
                                    <td>@subsidio.NombrePrograma</td>
                                    <td>@subsidio.Tipo</td>
                                    <td>@subsidio.Monto.ToString("C")</td>
                                    <td>@subsidio.Beneficiario?.Nombre</td>
                                    <td>@subsidio.FechaAsignacion.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge bg-success">@subsidio.Estado</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-info-circle fa-3x text-muted mb-3"></i>
                    <h5>No hay subsidios activos</h5>
                    <p class="text-muted">No se encontraron subsidios en estado activo.</p>
                </div>
            }
        </div>
    </div>
</div>
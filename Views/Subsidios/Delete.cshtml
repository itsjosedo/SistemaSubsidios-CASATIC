@section Scripts {
    <script>
        function validateAndSubmit() {
            const motivo = document.getElementById('motivoEliminacion');
            const motivoHidden = document.getElementById('motivoHidden');
            const deleteBtn = document.getElementById('deleteBtn');
            
            // Validar que el motivo no est茅 vac铆o
            if (!motivo.value.trim()) {
                motivo.classList.add('is-invalid');
                motivo.focus();
                alert('Debe ingresar el motivo de la eliminaci贸n para proceder.');
                return false;
            }
            
            // Confirmaci贸n adicional
            const isConfirmed = confirm('驴EST ABSOLUTAMENTE SEGURO?\n\n' +
                'Esta acci贸n ELIMINAR el subsidio: "' + '@Model.NombrePrograma' + '"\n\n' +
                'Motivo registrado: "' + motivo.value.substring(0, 100) + '..."\n\n' +
                'Esta operaci贸n quedar谩 registrada en el historial de auditor铆a.');
            
            if (!isConfirmed) {
                return false;
            }
            
            // Copiar el motivo al campo hidden (por si acaso)
            motivoHidden.value = motivo.value;
            
            // Cambiar texto del bot贸n durante el env铆o
            deleteBtn.innerHTML = `
                <span class="icon text-white-50">
                    <i class="fas fa-spinner fa-spin"></i>
                </span>
                <span class="text">Procesando...</span>
            `;
            deleteBtn.disabled = true;
            
            // Enviar el formulario
            document.getElementById('deleteForm').submit();
            return true;
        }
        
        document.addEventListener('DOMContentLoaded', function() {
            const motivo = document.getElementById('motivoEliminacion');
            
            // Remover validaci贸n cuando el usuario empiece a escribir
            motivo.addEventListener('input', function() {
                if (this.value.trim()) {
                    this.classList.remove('is-invalid');
                }
            });
            
            // Validar al hacer submit por Enter (prevenci贸n)
            document.getElementById('deleteForm').addEventListener('submit', function(e) {
                if (!motivo.value.trim()) {
                    e.preventDefault();
                    motivo.classList.add('is-invalid');
                    alert('Debe ingresar el motivo de la eliminaci贸n.');
                    return false;
                }
            });
        });
    </script>
}


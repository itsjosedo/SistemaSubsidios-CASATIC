@model Subsidio
@{
    ViewData["Title"] = "Eliminar Subsidio";
    Layout = ViewBag.Layout ?? "_Layout";
}

<div class="container-fluid px-4">
    <!-- Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-trash-alt me-2 text-danger"></i>@ViewData["Title"]
            </h1>
            <p class="mb-0 text-muted">Confirmar eliminación de subsidio</p>
        </div>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info btn-icon-split shadow-sm">
            <span class="icon text-white-50">
                <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Volver a Detalles</span>
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Card de confirmación de eliminación -->
            <div class="card shadow mb-4 border-left-danger">
                <div class="card-header py-3 bg-danger">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminación
                    </h6>
                </div>
                <div class="card-body">
                    <!-- Alerta de advertencia -->
                    <div class="alert alert-danger border-0 mb-4">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-circle fa-2x me-3"></i>
                            <div class="flex-grow-1">
                                <h4 class="alert-heading mb-2">¡Advertencia!</h4>
                                <p class="mb-1">Está a punto de eliminar permanentemente el siguiente subsidio:</p>
                                <p class="mb-0 fw-bold">"@Model.NombrePrograma"</p>
                            </div>
                        </div>
                    </div>

                    <!-- Información del subsidio a eliminar -->
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h6 class="m-0 font-weight-bold text-dark">
                                <i class="fas fa-info-circle me-2"></i>Información del Subsidio a Eliminar
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="info-item mb-3">
                                        <label class="fw-bold text-primary mb-1">
                                            <i class="fas fa-tag me-2"></i>Programa
                                        </label>
                                        <div class="p-2 bg-light rounded">
                                            <span class="text-dark">@Model.NombrePrograma</span>
                                        </div>
                                    </div>

                                    <div class="info-item mb-3">
                                        <label class="fw-bold text-primary mb-1">
                                            <i class="fas fa-list-alt me-2"></i>Tipo
                                        </label>
                                        <div class="p-2 bg-light rounded">
                                            <span class="badge bg-info text-white">
                                                <i class="fas fa-tags me-1"></i>@Model.Tipo
                                            </span>
                                        </div>
                                    </div>

                                    <div class="info-item mb-3">
                                        <label class="fw-bold text-primary mb-1">
                                            <i class="fas fa-dollar-sign me-2"></i>Monto
                                        </label>
                                        <div class="p-2 bg-light rounded">
                                            <span class="text-success fw-bold">$@Model.Monto.ToString("N2")</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="info-item mb-3">
                                        <label class="fw-bold text-primary mb-1">
                                            <i class="fas fa-calendar me-2"></i>Fecha Asignación
                                        </label>
                                        <div class="p-2 bg-light rounded">
                                            <span class="text-dark">
                                                <i class="fas fa-calendar-day text-muted me-1"></i>
                                                @Model.FechaAsignacion.ToString("dd/MM/yyyy")
                                            </span>
                                        </div>
                                    </div>

                                    <div class="info-item mb-3">
                                        <label class="fw-bold text-primary mb-1">
                                            <i class="fas fa-toggle-on me-2"></i>Estado
                                        </label>
                                        <div class="p-2 bg-light rounded">
                                            @{
                                                var estadoClass = Model.Estado?.ToLower() switch
                                                {
                                                    "activo" or "aprobado" => "bg-success",
                                                    "pendiente" => "bg-warning",
                                                    "rechazado" => "bg-danger",
                                                    "finalizado" => "bg-info",
                                                    _ => "bg-secondary"
                                                };

                                                var estadoIcon = Model.Estado?.ToLower() switch
                                                {
                                                    "activo" or "aprobado" => "fa-check-circle",
                                                    "pendiente" => "fa-clock",
                                                    "rechazado" => "fa-times-circle",
                                                    "finalizado" => "fa-flag-checkered",
                                                    _ => "fa-question"
                                                };
                                            }
                                            <span class="badge @estadoClass text-white">
                                                <i class="fas @estadoIcon me-1"></i>@Model.Estado
                                            </span>
                                        </div>
                                    </div>

                                    <div class="info-item">
                                        <label class="fw-bold text-primary mb-1">
                                            <i class="fas fa-hashtag me-2"></i>ID
                                        </label>
                                        <div class="p-2 bg-light rounded">
                                            <code class="text-muted">#@Model.Id</code>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Información del beneficiario -->
                    @if (Model.Beneficiario != null)
                    {
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h6 class="m-0 font-weight-bold text-dark">
                                    <i class="fas fa-user me-2"></i>Beneficiario Asociado
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-sm me-3">
                                        <div class="avatar-initials bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" 
                                             style="width: 50px; height: 50px; font-weight: 600;">
                                            @GetInitials(Model.Beneficiario.Nombre)
                                        </div>
                                    </div>
                                    <div>
                                        <h6 class="mb-1 text-primary">@Model.Beneficiario.Nombre</h6>
                                        <small class="text-muted">
                                            <i class="fas fa-id-card me-1"></i>@Model.Beneficiario.Dui
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Advertencias importantes -->
                    <div class="alert alert-warning border-0">
                        <h6 class="alert-heading">
                            <i class="fas fa-ban me-2"></i>Esta acción no se puede deshacer
                        </h6>
                        <ul class="mb-0">
                            <li>El subsidio será eliminado permanentemente</li>
                            <li>No podrá recuperar esta información</li>
                            <li>Se perderán todos los datos asociados</li>
                            <li>Esta acción es irreversible</li>
                        </ul>
                    </div>

                    <!-- Formulario de eliminación -->
                    <form asp-action="Delete" method="post" id="deleteForm">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary btn-icon-split">
                                <span class="icon text-white-50">
                                    <i class="fas fa-times"></i>
                                </span>
                                <span class="text">Cancelar</span>
                            </a>
                            <button type="submit" class="btn btn-danger btn-icon-split" id="deleteBtn">
                                <span class="icon text-white-50">
                                    <i class="fas fa-trash-alt"></i>
                                </span>
                                <span class="text">Eliminar Permanentemente</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Panel lateral de consideraciones -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-warning">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-lightbulb me-2"></i>Antes de Eliminar
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning border-0 mb-3">
                        <h6 class="alert-heading">
                            <i class="fas fa-question-circle me-2"></i>¿Está seguro?
                        </h6>
                        <p class="small mb-0">Considere estas alternativas antes de eliminar:</p>
                    </div>

                    <div class="alternatives">
                        <div class="alternative-item mb-3 p-3 border rounded">
                            <h6 class="text-primary">
                                <i class="fas fa-edit me-2"></i>Editar en lugar de eliminar
                            </h6>
                            <p class="small text-muted mb-2">Si necesita corregir información, considere editar el subsidio en lugar de eliminarlo.</p>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-edit me-1"></i>Editar Subsidio
                            </a>
                        </div>

                        <div class="alternative-item mb-3 p-3 border rounded">
                            <h6 class="text-info">
                                <i class="fas fa-archive me-2"></i>Cambiar estado
                            </h6>
                            <p class="small text-muted mb-2">Puede marcar el subsidio como "Finalizado" en lugar de eliminarlo.</p>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-toggle-on me-1"></i>Cambiar Estado
                            </a>
                        </div>

                        <div class="alternative-item p-3 border rounded">
                            <h6 class="text-success">
                                <i class="fas fa-eye me-2"></i>Revisar detalles
                            </h6>
                            <p class="small text-muted mb-2">Verifique toda la información antes de proceder con la eliminación.</p>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-success btn-sm">
                                <i class="fas fa-eye me-1"></i>Ver Detalles
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Información de contacto -->
            <div class="card shadow">
                <div class="card-header py-3 bg-light">
                    <h6 class="m-0 font-weight-bold text-dark">
                        <i class="fas fa-headset me-2"></i>¿Necesita ayuda?
                    </h6>
                </div>
                <div class="card-body">
                    <div class="small">
                        <p class="text-muted mb-3">Si tiene dudas sobre esta acción, contacte al administrador del sistema.</p>
                        
                        <div class="contact-info">
                            <div class="contact-item mb-2">
                                <i class="fas fa-envelope text-muted me-2"></i>
                                <span class="text-muted">soporte@sistema.com</span>
                            </div>
                            <div class="contact-item mb-2">
                                <i class="fas fa-phone text-muted me-2"></i>
                                <span class="text-muted">+503 2222-2222</span>
                            </div>
                            <div class="contact-item">
                                <i class="fas fa-clock text-muted me-2"></i>
                                <span class="text-muted">Lun-Vie: 8:00 AM - 5:00 PM</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const deleteForm = document.getElementById('deleteForm');
            const deleteBtn = document.getElementById('deleteBtn');

            deleteForm.addEventListener('submit', function(e) {
                // Confirmación adicional
                const isConfirmed = confirm('¿ESTÁ ABSOLUTAMENTE SEGURO?\n\nEsta acción ELIMINARÁ PERMANENTEMENTE el subsidio "' + '@Model.NombrePrograma' + '".\n\nEsta operación NO se puede deshacer.');
                
                if (!isConfirmed) {
                    e.preventDefault();
                    return false;
                }

                // Cambiar texto del botón durante el envío
                deleteBtn.innerHTML = `
                    <span class="icon text-white-50">
                        <i class="fas fa-spinner fa-spin"></i>
                    </span>
                    <span class="text">Eliminando...</span>
                `;
                deleteBtn.disabled = true;
            });
        });
    </script>
}

<style>
    .avatar-initials {
        font-size: 14px;
        font-weight: 600;
    }

    .border-left-danger {
        border-left: 4px solid #e74a3b !important;
    }

    .card-header.bg-danger {
        background: linear-gradient(45deg, #e74a3b, #be2617) !important;
    }

    .card-header.bg-warning {
        background: linear-gradient(45deg, #f6c23e, #dda20a) !important;
    }

    .alternative-item {
        transition: all 0.3s ease;
    }

    .alternative-item:hover {
        background-color: #f8f9fc;
        transform: translateY(-2px);
    }

    .btn-icon-split {
        padding: 0.375rem 1rem;
    }

    .contact-item {
        display: flex;
        align-items: center;
    }
</style>
}

@functions {
    // Función para obtener las iniciales del nombre
    public string GetInitials(string nombre)
    {
        if (string.IsNullOrEmpty(nombre)) return "??";
        
        var partes = nombre.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (partes.Length >= 2)
        {
            return $"{partes[0][0]}{partes[1][0]}".ToUpper();
        }
        return nombre.Length >= 2 ? nombre.Substring(0, 2).ToUpper() : nombre.ToUpper();
    }
}

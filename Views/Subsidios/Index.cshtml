@model List<Subsidio>
@{
    ViewData["Title"] = "Gestión de subsidios";
    Layout = ViewBag.Layout ?? "_Layout";
}

<div class="container-fluid px-4">
    <div class="row align-items-center mb-4">
        <div class="col-12 col-md-8 mb-3 mb-md-0">
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-hand-holding-usd me-2 text-success"></i>@ViewData["Title"]
            </h1>
            <p class="mb-0 text-muted small">Administre y gestione los programas de subsidios</p>
        </div>

        <div class="col-12 col-md-4">
            <div class="d-flex gap-2 justify-content-start justify-content-md-end">
                
                <a asp-controller="Beneficiarios" asp-action="ExportarListado" class="btn btn-outline-primary btn-sm shadow-sm">
                    <i class="fas fa-file-download me-1"></i>
                    <span>Exportar CSV</span>
                </a>

                <a asp-controller="Beneficiarios" asp-action="CargaMasiva" class="btn btn-outline-success btn-sm shadow-sm">
                    <i class="fas fa-file-csv me-1"></i>
                    <span>Importar CSV</span>
                </a>

                <a asp-action="Create" class="btn btn-success btn-sm shadow-sm">
                    <i class="fas fa-plus me-1"></i>
                    <span>Nuevo subsidio</span>
                </a>
                <a asp-action="Reporte" class="btn btn-primary btn-sm shadow-sm" target="_blank">
                    <i class="fas fa-file-pdf me-1"></i>
                    <span>Reporte</span>
                </a>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-6 col-xl-3 mb-3 mb-xl-0">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body p-2 p-sm-3">
                    <div class="row no-gutters align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total subsidios
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count</div>
                        </div>
                        <div class="col-auto d-none d-sm-block">
                            <i class="fas fa-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-xl-3 mb-3 mb-xl-0">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body p-2 p-sm-3">
                    <div class="row no-gutters align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Con beneficiarios
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(s => s.Beneficiarios.Any())
                            </div>
                        </div>
                        <div class="col-auto d-none d-sm-block">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-xl-3">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body p-2 p-sm-3">
                    <div class="row no-gutters align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Pendientes
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(s => s.Estado == "Pendiente")
                            </div>
                        </div>
                        <div class="col-auto d-none d-sm-block">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-xl-3">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body p-2 p-sm-3">
                    <div class="row no-gutters align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Monto total
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                $@Model.Sum(s => s.Monto).ToString("N2")
                            </div>
                        </div>
                        <div class="col-auto d-none d-sm-block">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle fa-lg me-3"></i>
                <div class="flex-grow-1">
                    <h6 class="alert-heading mb-1">¡Operación exitosa!</h6>
                    <p class="mb-0">@TempData["SuccessMessage"]</p>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    <div class="card shadow mb-4">
        <div
            class="card-header py-3 d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-2">
            <h6 class="m-0 font-weight-bold text-success">
                <i class="fas fa-table me-2"></i>Programas de subsidios
            </h6>
            <div class="input-group input-group-sm" style="max-width: 250px;">
                <input type="text" class="form-control" placeholder="Buscar subsidio..." id="searchInput">
                <button class="btn btn-outline-secondary" type="button">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0 p-sm-3">
            @if (Model.Any())
            {
                <div class="table-responsive d-none d-lg-block">
                    <table class="table table-bordered table-hover mb-0" id="dataTable" width="100%" cellspacing="0">
                        <thead class="bg-gradient-success text-white">
                            <tr>
                                <th>Programa</th>
                                <th>Tipo</th>
                                <th class="text-center">Beneficiarios</th>
                                <th class="text-end">Monto</th>
                                <th class="text-center">Fecha asignación</th>
                                <th class="text-center">Estado</th>
                                <th class="text-center" style="width: 180px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm me-3">
                                                <div class="avatar-initials bg-success text-white rounded-circle d-flex align-items-center justify-content-center"
                                                    style="width: 40px; height: 40px; font-weight: 600;">
                                                    @GetProgramaInitials(s.NombrePrograma)
                                                </div>
                                            </div>
                                            <div>
                                                <h6 class="mb-1">@s.NombrePrograma</h6>
                                                <small class="text-muted">ID: #@s.Id</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info text-white">
                                            <i class="fas fa-tag me-1"></i>@s.Tipo
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        @if (s.Beneficiarios.Any())
                                        {
                                            <span class="badge bg-success text-white" data-bs-toggle="tooltip"
                                                title="@s.Beneficiarios.Count beneficiario(s)">
                                                <i class="fas fa-users me-1"></i>@s.Beneficiarios.Count
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary text-white">
                                                <i class="fas fa-user-times me-1"></i>Sin asignar
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <span class="fw-bold text-success">$@s.Monto.ToString("N2")</span>
                                    </td>
                                    <td class="text-center">
                                        <i class="fas fa-calendar me-2 text-muted"></i>
                                        @s.FechaAsignacion.ToString("dd/MM/yyyy")
                                    </td>
                                    <td class="text-center">
                                        @{
                                            var estadoClass = GetEstadoBadgeClass(s.Estado);
                                            var estadoIcon = GetEstadoIcon(s.Estado);
                                        }
                                        <span class="badge @estadoClass">
                                            <i class="@estadoIcon me-1"></i>
                                            @s.Estado
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="GestionarBeneficiarios" asp-route-id="@s.Id"
                                                class="btn btn-sm btn-outline-success" data-bs-toggle="tooltip"
                                                title="Gestionar beneficiarios">
                                                <i class="fas fa-users"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-sm btn-outline-info"
                                                data-bs-toggle="tooltip" title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-outline-warning"
                                                data-bs-toggle="tooltip" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-sm btn-outline-danger"
                                                data-bs-toggle="tooltip" title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="d-lg-none">
                    @foreach (var s in Model)
                    {
                        var estadoClass = GetEstadoBadgeClass(s.Estado);
                        var estadoIcon = GetEstadoIcon(s.Estado);
                        var itemId = $"subsidio-{s.Id}";

                        <div class="border-bottom subsidio-item">
                            <div class="p-3 cursor-pointer" data-bs-toggle="collapse" data-bs-target="#@itemId"
                                aria-expanded="false">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center mb-2">
                                            <div class="avatar-initials bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-2"
                                                style="width: 32px; height: 32px; font-size: 0.75rem; font-weight: 600;">
                                                @GetProgramaInitials(s.NombrePrograma)
                                            </div>
                                            <div>
                                                <h6 class="mb-0 fw-bold">@s.NombrePrograma</h6>
                                                <small class="text-muted">ID: #@s.Id</small>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center gap-2 flex-wrap">
                                            <span class="badge @estadoClass">
                                                <i class="@estadoIcon me-1"></i>@s.Estado
                                            </span>
                                            <span class="badge bg-info">
                                                <i class="fas fa-tag me-1"></i>@s.Tipo
                                            </span>
                                            <span class="fw-bold text-success">$@s.Monto.ToString("N2")</span>
                                        </div>
                                        <div class="mt-2">
                                            @if (s.Beneficiarios.Any())
                                            {
                                                <span class="badge bg-success text-white">
                                                    <i class="fas fa-users me-1"></i>@s.Beneficiarios.Count beneficiario(s)
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary text-white">
                                                    <i class="fas fa-user-times me-1"></i>Sin beneficiarios
                                                </span>
                                            }
                                        </div>
                                    </div>
                                    <i class="fas fa-chevron-down text-muted ms-2"></i>
                                </div>
                            </div>

                            <div class="collapse" id="@itemId">
                                <div class="px-3 pb-3 bg-light">
                                    <div class="mb-2">
                                        <small class="text-muted d-block">Beneficiarios (@s.Beneficiarios.Count)</small>
                                        @if (s.Beneficiarios.Any())
                                        {
                                            <div class="mt-1">
                                                @foreach (var beneficiario in s.Beneficiarios.Take(3))
                                                {
                                                    <div class="d-flex justify-content-between align-items-center py-1 border-bottom">
                                                        <div>
                                                            <strong>@beneficiario.Nombre</strong>
                                                            <small class="text-muted d-block">
                                                                <i class="fas fa-id-card me-1"></i>@beneficiario.Dui
                                                            </small>
                                                            <small class="text-muted d-block">
                                                                <i class="fas fa-phone me-1"></i>@beneficiario.Telefono
                                                            </small>
                                                        </div>
                                                        <span
                                                            class="badge @(beneficiario.EstadoSubsidio == "pendiente" ? "bg-warning" : "bg-success") small">
                                                            @beneficiario.EstadoSubsidio
                                                        </span>
                                                    </div>
                                                }
                                                @if (s.Beneficiarios.Count > 3)
                                                {
                                                    <small class="text-muted">+ @(s.Beneficiarios.Count - 3) más...</small>
                                                }
                                            </div>
                                        }

                                        else
                                        {
                                            <span class="text-muted">No asignado</span>
                                        }
                                    </div>
                                    <div class="mb-3">
                                        <small class="text-muted d-block">Fecha de asignación</small>
                                        <strong>
                                            <i class="fas fa-calendar me-1"></i>
                                            @s.FechaAsignacion.ToString("dd/MM/yyyy")
                                        </strong>
                                    </div>

                                    <div class="d-grid gap-2">
                                        <a asp-action="GestionarBeneficiarios" asp-route-id="@s.Id"
                                            class="btn btn-success btn-sm">
                                            <i class="fas fa-users me-2"></i>Gestionar beneficiarios
                                        </a>
                                        <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye me-2"></i>Ver detalles
                                        </a>
                                        <div class="row g-2">
                                            <div class="col-6">
                                                <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-warning btn-sm w-100">
                                                    <i class="fas fa-edit me-1"></i>Editar
                                                </a>
                                            </div>
                                            <div class="col-6">
                                                <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-danger btn-sm w-100">
                                                    <i class="fas fa-trash me-1"></i>Eliminar
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="empty-state">
                        <i class="fas fa-hand-holding-usd fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">No hay subsidios registrados</h4>
                        <p class="text-muted mb-4">Comience agregando el primer subsidio al sistema.</p>
                        <a asp-action="Create" class="btn btn-success btn-lg">
                            <i class="fas fa-plus me-2"></i>Crear primer subsidio
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Búsqueda en tiempo real
        document.getElementById('searchInput').addEventListener('input', function () {
            const searchText = this.value.toLowerCase();

            // Desktop: buscar en tabla
            const desktopRows = document.querySelectorAll('#dataTable tbody tr');
            desktopRows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchText) ? '' : 'none';
            });

            // Mobile: buscar en items expandibles
            const mobileItems = document.querySelectorAll('.subsidio-item');
            mobileItems.forEach(item => {
                const text = item.textContent.toLowerCase();
                item.style.display = text.includes(searchText) ? '' : 'none';
            });
        });

        // Inicializar tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });

        // Animar el ícono de chevron cuando se expande/colapsa
        document.addEventListener('DOMContentLoaded', function () {
            const collapseElements = document.querySelectorAll('.collapse');
            collapseElements.forEach(function (element) {
                element.addEventListener('show.bs.collapse', function () {
                    const chevron = this.previousElementSibling.querySelector('.fa-chevron-down');
                    if (chevron) chevron.classList.add('rotate-180');
                });
                element.addEventListener('hide.bs.collapse', function () {
                    const chevron = this.previousElementSibling.querySelector('.fa-chevron-down');
                    if (chevron) chevron.classList.remove('rotate-180');
                });
            });
        });
    </script>

    <style>
        .cursor-pointer {
            cursor: pointer;
        }

        .fa-chevron-down {
            transition: transform 0.3s ease;
        }

        .rotate-180 {
            transform: rotate(180deg);
        }

        .subsidio-item:hover {
            background-color: #f8f9fa;
        }

        .avatar-initials {
            font-weight: 600;
        }
    </style>
}

@functions {
    public string GetProgramaInitials(string nombrePrograma)
    {
        if (string.IsNullOrEmpty(nombrePrograma)) return "SP";
        var palabras = nombrePrograma.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (palabras.Length >= 2)
        {
            return $"{palabras[0][0]}{palabras[1][0]}".ToUpper();
        }
        return nombrePrograma.Length >= 2 ? nombrePrograma.Substring(0, 2).ToUpper() : nombrePrograma.ToUpper();
    }

    public string GetEstadoBadgeClass(string estado)
    {
        if (string.IsNullOrEmpty(estado)) return "bg-secondary";
        return estado.ToLower() switch
        {
            "activo" or "aprobado" => "bg-success",
            "pendiente" => "bg-warning",
            "rechazado" => "bg-danger",
            "finalizado" => "bg-info",
            _ => "bg-secondary"
        };
    }

    public string GetEstadoIcon(string estado)
    {
        if (string.IsNullOrEmpty(estado)) return "fas fa-question";
        return estado.ToLower() switch
        {
            "activo" or "aprobado" => "fas fa-check-circle",
            "pendiente" => "fas fa-clock",
            "rechazado" => "fas fa-times-circle",
            "finalizado" => "fas fa-flag-checkered",
            _ => "fas fa-question"
        };
    }
}
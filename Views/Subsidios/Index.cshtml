@model List<Subsidio>
@{
    ViewData["Title"] = "Gestión de subsidios";
    Layout = ViewBag.Layout ?? "_Layout";
}

<div class="container-fluid px-4">
    <!-- Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-hand-holding-usd me-2 text-success"></i>@ViewData["Title"]
            </h1>
            <p class="mb-0 text-muted">Administre y gestione los programas de subsidios</p>
        </div>
        <div class="btn-group">
            <a asp-action="Create" class="btn btn-success btn-icon-split shadow-sm">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Nuevo subsidio</span>
            </a>
            <a asp-action="Reporte" class="btn btn-primary btn-icon-split shadow-sm ms-2" target="_blank">
                <span class="icon text-white-50">
                    <i class="fas fa-file-pdf"></i>
                </span>
                <span class="text">Generar reporte</span>
            </a>
        </div>
    </div>

    <!-- Resto del código se mantiene igual -->
    <!-- Tarjetas de estadísticas -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total subsidios
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Activos/Aprobados
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(s => s.Estado == "Aprobado" || s.Estado == "Activo")
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Pendientes
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(s => s.Estado == "Pendiente")
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Monto total
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                $@Model.Sum(s => s.Monto).ToString("N2")
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Mensajes -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle fa-lg me-3"></i>
                <div class="flex-grow-1">
                    <h6 class="alert-heading mb-1">¡Operación exitosa!</h6>
                    <p class="mb-0">@TempData["SuccessMessage"]</p>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    <!-- Tabla de subsidios -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-success">
                <i class="fas fa-table me-2"></i>Programas de subsidios
            </h6>
            <div class="d-flex">
                <div class="input-group input-group-sm me-2" style="width: 250px;">
                    <input type="text" class="form-control" placeholder="Buscar subsidio..." id="searchInput">
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead class="bg-gradient-success text-white">
                            <tr>
                                <th>Programa</th>
                                <th>Tipo</th>
                                <th>Beneficiario</th>
                                <th class="text-end">Monto</th>
                                <th class="text-center">Fecha asignación</th>
                                <th class="text-center">Estado</th>
                                <th class="text-center" style="width: 150px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm me-3">
                                                <div class="avatar-initials bg-success text-white rounded-circle d-flex align-items-center justify-content-center"
                                                    style="width: 40px; height: 40px; font-weight: 600;">
                                                    @GetProgramaInitials(s.NombrePrograma)
                                                </div>
                                            </div>
                                            <div>
                                                <h6 class="mb-1">@s.NombrePrograma</h6>
                                                <small class="text-muted">ID: #@s.Id</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info text-white">
                                            <i class="fas fa-tag me-1"></i>@s.Tipo
                                        </span>
                                    </td>
                                    <td>
                                        @if (s.Beneficiario != null)
                                        {
                                            <div>
                                                <h6 class="mb-1">@s.Beneficiario.Nombre</h6>
                                                <small class="text-muted">
                                                    <i class="fas fa-id-card me-1"></i>@s.Beneficiario.Dui
                                                </small>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No asignado</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <span class="fw-bold text-success">$@s.Monto.ToString("N2")</span>
                                    </td>
                                    <td class="text-center">
                                        <i class="fas fa-calendar me-2 text-muted"></i>
                                        @s.FechaAsignacion.ToString("dd/MM/yyyy")
                                    </td>
                                    <td class="text-center">
                                        @{
                                            var estadoClass = GetEstadoBadgeClass(s.Estado);
                                            var estadoIcon = GetEstadoIcon(s.Estado);
                                        }
                                        <span class="badge @estadoClass">
                                            <i class="@estadoIcon me-1"></i>
                                            @s.Estado
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-sm btn-outline-info"
                                                data-bs-toggle="tooltip" title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-outline-warning"
                                                data-bs-toggle="tooltip" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-sm btn-outline-danger"
                                                data-bs-toggle="tooltip" title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="empty-state">
                        <i class="fas fa-hand-holding-usd fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">No hay subsidios registrados</h4>
                        <p class="text-muted mb-4">Comience agregando el primer subsidio al sistema.</p>
                        <a asp-action="Create" class="btn btn-success btn-lg">
                            <i class="fas fa-plus me-2"></i>Crear primer subsidio
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Búsqueda en tiempo real
        document.getElementById('searchInput').addEventListener('input', function () {
            const searchText = this.value.toLowerCase();
            const rows = document.querySelectorAll('#dataTable tbody tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchText) ? '' : 'none';
            });
        });

        // Inicializar tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
    </script>
}

@functions {
    // Función para obtener las iniciales del programa
    public string GetProgramaInitials(string nombrePrograma)
    {
        if (string.IsNullOrEmpty(nombrePrograma)) return "SP";

        var palabras = nombrePrograma.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (palabras.Length >= 2)
        {
            return $"{palabras[0][0]}{palabras[1][0]}".ToUpper();
        }
        return nombrePrograma.Length >= 2 ? nombrePrograma.Substring(0, 2).ToUpper() : nombrePrograma.ToUpper();
    }

    // Función para determinar la clase CSS del badge de estado
    public string GetEstadoBadgeClass(string estado)
    {
        if (string.IsNullOrEmpty(estado)) return "bg-secondary";

        return estado.ToLower() switch
        {
            "activo" or "aprobado" => "bg-success",
            "pendiente" => "bg-warning",
            "rechazado" => "bg-danger",
            "finalizado" => "bg-info",
            _ => "bg-secondary"
        };
    }

    // Función para determinar el icono del estado
    public string GetEstadoIcon(string estado)
    {
        if (string.IsNullOrEmpty(estado)) return "fas fa-question";

        return estado.ToLower() switch
        {
            "activo" or "aprobado" => "fas fa-check-circle",
            "pendiente" => "fas fa-clock",
            "rechazado" => "fas fa-times-circle",
            "finalizado" => "fas fa-flag-checkered",
            _ => "fas fa-question"
        };
    }
}
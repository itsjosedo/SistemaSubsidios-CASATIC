@model List<Subsidio>
@{
    ViewData["Title"] = "Gesti√≥n de subsidios";
    Layout = ViewBag.Layout ?? "_Layout";
}

<div class="container-fluid px-4">
    <div class="row align-items-center mb-4">
        <div class="col-12 col-md-8 mb-3 mb-md-0">
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-hand-holding-usd me-2 text-success"></i>@ViewData["Title"]
            </h1>
            <p class="mb-0 text-muted small">Administre y gestione los programas de subsidios</p>
        </div>

        <div class="col-12 col-md-4">
            <div class="d-flex gap-2 justify-content-start justify-content-md-end">
                
                <a asp-controller="Beneficiarios" asp-action="ExportarListado" class="btn btn-outline-primary btn-sm shadow-sm">
                    <i class="fas fa-file-download me-1"></i>
                    <span>Exportar CSV</span>
                </a>

                <a asp-controller="Beneficiarios" asp-action="CargaMasiva" class="btn btn-outline-success btn-sm shadow-sm">
                    <i class="fas fa-file-csv me-1"></i>
                    <span>Importar CSV</span>
                </a>

                <a asp-action="Create" class="btn btn-success btn-sm shadow-sm">
                    <i class="fas fa-plus me-1"></i>
                    <span>Nuevo subsidio</span>
                </a>
                <a asp-action="Reporte" class="btn btn-primary btn-sm shadow-sm" target="_blank">
                    <i class="fas fa-file-pdf me-1"></i>
                    <span>Reporte</span>
                </a>

                @if (User.IsInRole("Administrador") || User.IsInRole("Admin"))
        {
            <a asp-action="VerificarExpirados" class="btn btn-warning btn-sm shadow-sm" 
               onclick="return confirm('¬øEst√° seguro de verificar y actualizar los subsidios expirados?')">
                <i class="fas fa-sync-alt me-1"></i>
                <span>Verificar expirados</span>
            </a>
        }
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-6 col-xl-3 mb-3 mb-xl-0">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body p-2 p-sm-3">
                    <div class="row no-gutters align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total subsidios
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count</div>
                        </div>
                        <div class="col-auto d-none d-sm-block">
                            <i class="fas fa-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-xl-3 mb-3 mb-xl-0">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body p-2 p-sm-3">
                    <div class="row no-gutters align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Con beneficiarios
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(s => s.Beneficiarios.Any())
                            </div>
                        </div>
                        <div class="col-auto d-none d-sm-block">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-xl-3">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body p-2 p-sm-3">
                    <div class="row no-gutters align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Pendientes
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(s => s.Estado == "Pendiente")
                            </div>
                        </div>
                        <div class="col-auto d-none d-sm-block">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-xl-3">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body p-2 p-sm-3">
                    <div class="row no-gutters align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Monto total
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                $@Model.Sum(s => s.Monto).ToString("N2")
                            </div>
                        </div>
                        <div class="col-auto d-none d-sm-block">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- üî• NUEVA: Tarjeta para subsidios por expirar -->
    <div class="row mb-4">
        <div class="col-6 col-xl-3 mb-3 mb-xl-0">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body p-2 p-sm-3">
                    <div class="row no-gutters align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Por expirar (‚â§30 d√≠as)
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @{
                                    var porExpirarCount = Model.Where(s => {
                                        var dias = (s.FechaExpiracion - DateTime.Now).Days;
                                        return dias <= 30 && dias > 0 && s.Estado == "Activo";
                                    }).Count();
                                }
                                @porExpirarCount
                            </div>
                        </div>
                        <div class="col-auto d-none d-sm-block">
                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-xl-3 mb-3 mb-xl-0">
            <div class="card border-left-secondary shadow h-100 py-2">
                <div class="card-body p-2 p-sm-3">
                    <div class="row no-gutters align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">
                                Expirados
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @{
                                    var expiradosCount = Model.Where(s => 
                                        s.FechaExpiracion < DateTime.Now && s.Estado == "Activo"
                                    ).Count();
                                }
                                @expiradosCount
                            </div>
                        </div>
                        <div class="col-auto d-none d-sm-block">
                            <i class="fas fa-calendar-times fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-xl-3">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body p-2 p-sm-3">
                    <div class="row no-gutters align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Renovados
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(s => s.FechaRenovacion.HasValue)
                            </div>
                        </div>
                        <div class="col-auto d-none d-sm-block">
                            <i class="fas fa-sync-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-xl-3">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body p-2 p-sm-3">
                    <div class="row no-gutters align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Pr√≥ximos a renovar
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(s => s.ProximaRenovacion.HasValue && s.ProximaRenovacion <= DateTime.Now.AddDays(30))
                            </div>
                        </div>
                        <div class="col-auto d-none d-sm-block">
                            <i class="fas fa-bell fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- üî• NUEVO: Alerta para subsidios por expirar -->
    @{
        var subsidiosPorExpirar = Model.Where(s => {
            var dias = (s.FechaExpiracion - DateTime.Now).Days;
            return dias <= 30 && dias > 0 && s.Estado == "Activo";
        }).ToList();
        
        var subsidiosExpirados = Model.Where(s => 
            s.FechaExpiracion < DateTime.Now && s.Estado == "Activo"
        ).ToList();
    }

    @if (subsidiosPorExpirar.Any())
    {
        <div class="alert alert-warning alert-dismissible fade show mb-4 shadow-sm" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-triangle fa-lg me-3"></i>
                <div class="flex-grow-1">
                    <h6 class="alert-heading mb-1">
                        <i class="fas fa-clock me-2"></i>¬°Atenci√≥n! Tiene @subsidiosPorExpirar.Count subsidio(s) por expirar
                    </h6>
                    <p class="mb-0 small">
                        Los siguientes subsidios expiran en los pr√≥ximos 30 d√≠as:
                        @foreach (var subsidio in subsidiosPorExpirar.Take(3))
                        {
                            var diasRestantes = (subsidio.FechaExpiracion - DateTime.Now).Days;
                            <span class="badge bg-warning text-dark ms-2">
                                @subsidio.NombrePrograma (@diasRestantes d√≠as)
                            </span>
                        }
                        @if (subsidiosPorExpirar.Count > 3)
                        {
                            <span class="text-muted">y @(subsidiosPorExpirar.Count - 3) m√°s...</span>
                        }
                    </p>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    @if (subsidiosExpirados.Any())
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4 shadow-sm" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-calendar-times fa-lg me-3"></i>
                <div class="flex-grow-1">
                    <h6 class="alert-heading mb-1">
                        <i class="fas fa-exclamation-circle me-2"></i>¬°Urgente! Tiene @subsidiosExpirados.Count subsidio(s) expirados
                    </h6>
                    <p class="mb-0 small">
                        Los siguientes subsidios han expirado y requieren atenci√≥n:
                        @foreach (var subsidio in subsidiosExpirados.Take(3))
                        {
                            <span class="badge bg-danger ms-2">@subsidio.NombrePrograma</span>
                        }
                        @if (subsidiosExpirados.Count > 3)
                        {
                            <span class="text-muted">y @(subsidiosExpirados.Count - 3) m√°s...</span>
                        }
                    </p>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle fa-lg me-3"></i>
                <div class="flex-grow-1">
                    <h6 class="alert-heading mb-1">¬°Operaci√≥n exitosa!</h6>
                    <p class="mb-0">@TempData["SuccessMessage"]</p>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-2">
            <h6 class="m-0 font-weight-bold text-success">
                <i class="fas fa-table me-2"></i>Programas de subsidios
            </h6>
            <div class="input-group input-group-sm" style="max-width: 250px;">
                <input type="text" class="form-control" placeholder="Buscar subsidio..." id="searchInput">
                <button class="btn btn-outline-secondary" type="button">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0 p-sm-3">
            @if (Model.Any())
            {
                <div class="table-responsive d-none d-lg-block">
                    <table class="table table-bordered table-hover mb-0" id="dataTable" width="100%" cellspacing="0">
                        <thead class="bg-gradient-success text-white">
                            <tr>
                                <th>Programa</th>
                                <th>Tipo</th>
                                <th class="text-center">Beneficiarios</th>
                                <th class="text-end">Monto</th>
                                <th class="text-center">Fecha asignaci√≥n</th>
                                <th class="text-center">Expiraci√≥n</th>
                                <th class="text-center">Estado</th>
                                <th class="text-center" style="width: 200px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in Model)
                            {
                                var diasRestantes = (s.FechaExpiracion - DateTime.Now).Days;
                                var estaExpirado = s.FechaExpiracion < DateTime.Now && s.Estado == "Activo";
                                var porExpirar = diasRestantes <= 30 && diasRestantes > 0 && s.Estado == "Activo";
                                
                                <tr class="@(estaExpirado ? "table-danger" : porExpirar ? "table-warning" : "")">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm me-3">
                                                <div class="avatar-initials bg-success text-white rounded-circle d-flex align-items-center justify-content-center"
                                                    style="width: 40px; height: 40px; font-weight: 600;">
                                                    @GetProgramaInitials(s.NombrePrograma)
                                                </div>
                                            </div>
                                            <div>
                                                <h6 class="mb-1">@s.NombrePrograma</h6>
                                                <small class="text-muted">ID: #@s.Id</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info text-white">
                                            <i class="fas fa-tag me-1"></i>@s.Tipo
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        @if (s.Beneficiarios.Any())
                                        {
                                            <span class="badge bg-success text-white" data-bs-toggle="tooltip"
                                                title="@s.Beneficiarios.Count beneficiario(s)">
                                                <i class="fas fa-users me-1"></i>@s.Beneficiarios.Count
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary text-white">
                                                <i class="fas fa-user-times me-1"></i>Sin asignar
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <span class="fw-bold text-success">$@s.Monto.ToString("N2")</span>
                                    </td>
                                    <td class="text-center">
                                        <i class="fas fa-calendar me-2 text-muted"></i>
                                        @s.FechaAsignacion.ToString("dd/MM/yyyy")
                                    </td>
                                    <td class="text-center">
                                        <div class="d-flex flex-column align-items-center">
                                            <small>@s.FechaExpiracion.ToString("dd/MM/yyyy")</small>
                                            @if (estaExpirado)
                                            {
                                                <span class="badge bg-danger small mt-1">
                                                    <i class="fas fa-times-circle me-1"></i>Expirado
                                                </span>
                                            }
                                            else if (porExpirar)
                                            {
                                                <span class="badge bg-warning text-dark small mt-1">
                                                    <i class="fas fa-exclamation-triangle me-1"></i>@diasRestantes d√≠as
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success small mt-1">
                                                    <i class="fas fa-check-circle me-1"></i>@diasRestantes d√≠as
                                                </span>
                                            }
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        @{
                                            var estadoClass = GetEstadoBadgeClass(s.Estado);
                                            var estadoIcon = GetEstadoIcon(s.Estado);
                                        }
                                        <span class="badge @estadoClass">
                                            <i class="@estadoIcon me-1"></i>
                                            @s.Estado
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="GestionarBeneficiarios" asp-route-id="@s.Id"
                                                class="btn btn-sm btn-outline-success" data-bs-toggle="tooltip"
                                                title="Gestionar beneficiarios">
                                                <i class="fas fa-users"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-sm btn-outline-info"
                                                data-bs-toggle="tooltip" title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-outline-warning"
                                                data-bs-toggle="tooltip" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <!-- üî• NUEVO: Bot√≥n para renovar (solo si est√° activo y por expirar o expirado) -->
                                            @if ((s.Estado == "Activo" && porExpirar) || estaExpirado)
                                            {
                                                <a asp-action="Renovar" asp-route-id="@s.Id" 
                                                   class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip"
                                                   title="Renovar subsidio">
                                                    <i class="fas fa-sync-alt"></i>
                                                </a>
                                            }
                                            <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-sm btn-outline-danger"
                                                data-bs-toggle="tooltip" title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="d-lg-none">
                    @foreach (var s in Model)
                    {
                        var estadoClass = GetEstadoBadgeClass(s.Estado);
                        var estadoIcon = GetEstadoIcon(s.Estado);
                        var itemId = $"subsidio-{s.Id}";
                        var diasRestantes = (s.FechaExpiracion - DateTime.Now).Days;
                        var estaExpirado = s.FechaExpiracion < DateTime.Now && s.Estado == "Activo";
                        var porExpirar = diasRestantes <= 30 && diasRestantes > 0 && s.Estado == "Activo";

                        <div class="border-bottom subsidio-item">
                            <!-- Fila principal (siempre visible) -->
                            <div class="p-3 cursor-pointer" data-bs-toggle="collapse" data-bs-target="#@itemId"
                                aria-expanded="false">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center mb-2">
                                            <div class="avatar-initials bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-2"
                                                style="width: 32px; height: 32px; font-size: 0.75rem; font-weight: 600;">
                                                @GetProgramaInitials(s.NombrePrograma)
                                            </div>
                                            <div>
                                                <h6 class="mb-0 fw-bold">@s.NombrePrograma</h6>
                                                <small class="text-muted">ID: #@s.Id</small>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center gap-2 flex-wrap">
                                            <span class="badge @estadoClass">
                                                <i class="@estadoIcon me-1"></i>@s.Estado
                                            </span>
                                            <span class="badge bg-info">
                                                <i class="fas fa-tag me-1"></i>@s.Tipo
                                            </span>
                                            <span class="fw-bold text-success">$@s.Monto.ToString("N2")</span>
                                        </div>
                                        <!-- Estado del beneficiario en vista m√≥vil -->
                                        <div class="mt-2">
                                            @if (s.Beneficiarios.Any())
                                            {
                                                <span class="badge bg-success text-white">
                                                    <i class="fas fa-users me-1"></i>@s.Beneficiarios.Count beneficiario(s)
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary text-white">
                                                    <i class="fas fa-user-times me-1"></i>Sin beneficiarios
                                                </span>
                                            }
                                            
                                            @if (estaExpirado)
                                            {
                                                <span class="badge bg-danger text-white">
                                                    <i class="fas fa-times-circle me-1"></i>Expirado
                                                </span>
                                            }
                                            else if (porExpirar)
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="fas fa-exclamation-triangle me-1"></i>@diasRestantes d√≠as
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success text-white">
                                                    <i class="fas fa-check-circle me-1"></i>@diasRestantes d√≠as
                                                </span>
                                            }
                                        </div>
                                    </div>
                                    <i class="fas fa-chevron-down text-muted ms-2"></i>
                                </div>
                            </div>

                            <div class="collapse" id="@itemId">
                                <div class="px-3 pb-3 bg-light">
                                    <!-- Informaci√≥n de beneficiarios solo visible al expandir -->
                                    <div class="mb-2">
                                        <small class="text-muted d-block">Beneficiarios (@s.Beneficiarios.Count)</small>
                                        @if (s.Beneficiarios.Any())
                                        {
                                            <div class="mt-1">
                                                @foreach (var beneficiario in s.Beneficiarios.Take(3))
                                                {
                                                    <div class="d-flex justify-content-between align-items-center py-1 border-bottom">
                                                        <div>
                                                            <strong>@beneficiario.Nombre</strong>
                                                            <small class="text-muted d-block">
                                                                <i class="fas fa-id-card me-1"></i>@beneficiario.Dui
                                                            </small>
                                                            <small class="text-muted d-block">
                                                                <i class="fas fa-phone me-1"></i>@beneficiario.Telefono
                                                            </small>
                                                        </div>
                                                        <span class="badge @(beneficiario.EstadoSubsidio == "pendiente" ? "bg-warning" : "bg-success") small">
                                                            @beneficiario.EstadoSubsidio
                                                        </span>
                                                    </div>
                                                }
                                                @if (s.Beneficiarios.Count > 3)
                                                {
                                                    <small class="text-muted">+ @(s.Beneficiarios.Count - 3) m√°s...</small>
                                                }
                                            </div>
                                        }
                                        
                                        else
                                        {
                                            <span class="text-muted">No asignado</span>
                                        }
                                    </div>
                                    
                                    <!-- üî• NUEVO: Informaci√≥n de fechas -->
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <small class="text-muted d-block">Fecha asignaci√≥n</small>
                                            <strong>
                                                <i class="fas fa-calendar me-1"></i>
                                                @s.FechaAsignacion.ToString("dd/MM/yyyy")
                                            </strong>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted d-block">Fecha expiraci√≥n</small>
                                            <strong>
                                                <i class="fas fa-calendar-times me-1"></i>
                                                @s.FechaExpiracion.ToString("dd/MM/yyyy")
                                            </strong>
                                        </div>
                                    </div>
                                    

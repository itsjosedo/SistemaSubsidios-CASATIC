@model List<Subsidio>
@{
    ViewData["Title"] = "Subsidios";
}

<h2>Programas de Subsidios</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Crear Nuevo Subsidio</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Beneficiario</th>
            <th>Monto</th>
            <th>Fecha Asignaci√≥n</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.NombrePrograma</td>
                <td>@s.Tipo</td>
                <td>@s.Beneficiario?.Nombre</td>
                <!-- Monto con 2 decimales -->
                <td>@s.Monto.ToString("0.00")</td>
                <!-- Fecha en formato dd/MM/yyyy -->
                <td>@s.FechaAsignacion.ToString("dd/MM/yyyy")</td>
                <td>@s.Estado</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

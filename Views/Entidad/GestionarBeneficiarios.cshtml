@model Entidad  

@{
    ViewData["Title"] = $"Gestionar beneficiarios - {Model.Nombre}";
     Layout = ViewBag.Layout ?? "_Layout";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="fas fa-users me-2"></i>Gestionar beneficiarios - @Model.Nombre
        </h1>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Volver a detalles
        </a>
    </div>

    <!-- Alertas -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Asignar Beneficiarios Existentes -->
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-link me-2"></i>Asignar beneficiarios existentes
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="AsignarBeneficiario" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="entidadId" value="@Model.Id" />
                        
                        <div class="mb-3">
                            <label class="form-label">Seleccionar beneficiario:</label>
                            <select name="beneficiarioId" class="form-select" required>
                                <option value="">-- Seleccione un beneficiario --</option>
                                @if (ViewBag.BeneficiariosDisponibles != null)
                                {
                                    @foreach (var ben in ViewBag.BeneficiariosDisponibles)
                                    {
                                        <option value="@ben.Id_Beneficiario">@ben.Nombre - @ben.Dui</option>
                                    }
                                }
                            </select>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-link me-2"></i>Asignar a entidad
                            </button>
                        </div>
                    </form>
                    
                    <div class="mt-3">
                        <a href="@Url.Action("Create", "Beneficiarios")" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-plus me-1"></i>Crear nuevo beneficiario
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lista de Beneficiarios Asignados -->
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>Beneficiarios asignados
                        <span class="badge bg-light text-dark ms-2">@(Model.Beneficiarios?.Count ?? 0)</span>
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Beneficiarios != null && Model.Beneficiarios.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>DUI</th>
                                        <th>Teléfono</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var beneficiario in Model.Beneficiarios)
                                    {
                                        <tr>
                                            <td>@beneficiario.Nombre</td>
                                            <td>@beneficiario.Dui</td>
                                            <td>@beneficiario.Telefono</td>
                                            <td>
                                                <span class="badge @(beneficiario.EstadoSubsidio == "pendiente" ? "bg-warning" : "bg-success")">
                                                    @beneficiario.EstadoSubsidio
                                                </span>
                                            </td>
                                            <td>
                                                <form asp-action="DesasignarBeneficiario" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@beneficiario.Id_Beneficiario" />
                                                    <input type="hidden" name="entidadId" value="@Model.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-warning" 
                                                            onclick="return confirm('¿Desasignar este beneficiario de la entidad?')">
                                                        <i class="fas fa-unlink"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No hay beneficiarios asignados a esta entidad.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@{
    Layout = ViewBag.Layout ?? "_Layout";
    ViewData["Title"] = "Dashboard Entidad";
}

@section Styles {
    <link rel="stylesheet" href="~/css/entidad.css" asp-append-version="true" />
    <style>
        .clickable-stat-card {
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .clickable-stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        
        .stat-link {
            text-decoration: none;
            color: inherit;
            display: block;
            height: 100%;
        }
    </style>
}

<div class="container-fluid px-4">
    <!-- Sección de Bienvenida -->
    <div class="welcome-section fade-in-up">
        <div class="row align-items-center">
            <div class="col-md-12 text-center">
                <h1 class="welcome-title">
                    <i class="fas fa-building me-3"></i>Dashboard Entidad
                </h1>
                <p class="welcome-subtitle">Panel de control para la gestión de subsidios</p>
            </div>
        </div>
    </div>

    <!-- Módulos Principales -->
    <div class="row mb-4">
        <div class="col-lg-12 mb-4 fade-in-up" style="animation-delay: 0.2s;">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-hand-holding-usd"></i>
                </div>
                <h3 class="feature-title">Gestión de Subsidios</h3>
                <p class="feature-description">
                    Administra y consulta los subsidios disponibles. 
                    Realiza el seguimiento y gestión de programas de subsidios.
                </p>
                <a asp-controller="Subsidios" asp-action="Index" class="quick-action-btn">
                    <i class="fas fa-cog me-2"></i>Gestionar Subsidios
                </a>
            </div>
        </div>
    </div>

    <!-- Información del Sistema -->
    <div class="row mb-4">
        <div class="col-xl-4 col-md-4 fade-in-up" style="animation-delay: 0.1s;">
            <a asp-controller="Subsidios" asp-action="Activos" class="stat-link">
                <div class="stat-card clickable-stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-hand-holding-usd"></i>
                    </div>
                    <div class="stat-label">Subsidios Activos</div>
                </div>
            </a>
        </div>
        
        <div class="col-xl-4 col-md-4 fade-in-up" style="animation-delay: 0.2s;">
            <a asp-controller="Beneficiarios" asp-action="Lista" class="stat-link">
                <div class="stat-card success clickable-stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-label">Beneficiarios</div>
                </div>
            </a>
        </div>    
        
        <div class="col-xl-4 col-md-4 fade-in-up" style="animation-delay: 0.4s;">
            <a asp-controller="Solicitudes" asp-action="Pendientes" class="stat-link">
                <div class="stat-card warning clickable-stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="stat-label">Solicitudes Pendientes</div>
                </div>
            </a>
        </div>
    </div>
</div>
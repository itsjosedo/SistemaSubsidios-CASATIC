@model EntidadViewModel

@{
    ViewData["Title"] = "Registro de Entidad";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow border-0">
            <div class="card-header bg-primary text-white py-3">
                <h3 class="card-title mb-0 text-center">
                    <i class="fas fa-user-plus me-2"></i>@ViewData["Title"]
                </h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="CreateEntidad" method="post" id="entidadForm" class="needs-validation" novalidate>
                    @Html.AntiForgeryToken()

                    <!-- Mensajes de validación generales -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-dismissible alert-warning">
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Por favor corrige los siguientes errores:</h5>
                    </div>

                    <!-- Sección de Información Personal -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-primary border-bottom pb-2">
                                <i class="fas fa-id-card me-2"></i>Información Personal
                            </h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Nombre" class="form-label fw-semibold">
                                <i class="fas fa-user me-1 text-muted"></i>Nombre de Entidad *
                            </label>
                            <input asp-for="Nombre" class="form-control" 
                                   placeholder="Ej: CASTAIC">
                            <div class="validation-message">
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <small class="form-text text-muted"></small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">
                                <i class="fas fa-address-card me-1 text-muted"></i>Email *
                            </label>
                            <input asp-for="Email" class="form-control" 
                                   placeholder="emialentidad@gmail.com">
                            <div class="validation-message">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <small class="form-text text-muted"></small>
                        </div>
                    </div>


                    <div class="mb-3">
                        <label asp-for="Direccion" class="form-label fw-semibold">
                            <i class="fas fa-map-marker-alt me-1 text-muted"></i>Dirección Completa *
                        </label>
                        <textarea asp-for="Direccion" class="form-control" 
                                  rows="3" placeholder="Ej: Colonia Las Flores, Calle Principal #123, San Salvador"></textarea>
                        <div class="validation-message">
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>
                        <small class="form-text text-muted">Incluya colonia, calle, número y municipio</small>
                    </div>

                    <!-- Información de campos requeridos -->
                    <div class="alert alert-info">
                        <small class="d-flex align-items-center">
                            <i class="fas fa-info-circle me-2"></i>
                            Los campos marcados con * son obligatorios
                        </small>
                    </div>

                    <!-- Botones de Acción -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                            <i class="fas fa-arrow-left me-2"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Registrar Entidad
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal Términos y Condiciones -->
<div class="modal fade" id="terminosModal" tabindex="-1" aria-labelledby="terminosModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="terminosModalLabel">
                    <i class="fas fa-file-contract me-2"></i>Términos y Condiciones
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6>Registro de Beneficiarios - Sistema de Subsidios CASATIC</h6>
                <p>Al aceptar los términos y condiciones, usted reconoce que:</p>
                <ul>
                    <li>La información proporcionada es verídica y completa</li>
                    <li>Se compromete a notificar cualquier cambio en sus datos</li>
                    <li>Acepta el uso de su información para fines estadísticos</li>
                    <li>Conoce los requisitos y procedimientos del programa</li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 15px;
            margin-top: 2rem;
        }
        
        .card-header {
            border-radius: 15px 15px 0 0 !important;
        }
        
        .form-control, .form-select {
            border-radius: 10px;
            border: 2px solid #e9ecef;
            transition: all 0.3s ease;
            padding: 0.75rem 1rem;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }
        
        .btn {
            border-radius: 10px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
        }
        
        .bg-light {
            background-color: #f8f9fa !important;
        }
        
        .validation-message {
            min-height: 24px;
            margin-top: 4px;
        }
        
        .field-validation-error {
            display: flex;
            align-items: center;
            font-size: 0.875rem;
            color: #dc3545;
            background: #f8d7da;
            padding: 8px 12px;
            border-radius: 6px;
            border-left: 4px solid #dc3545;
            margin-top: 6px;
            animation: fadeIn 0.3s ease-in;
        }
        
        .field-validation-error::before {
            content: "⚠";
            margin-right: 8px;
            font-weight: bold;
            font-size: 1.1em;
        }
        
        .field-validation-valid {
            display: none;
        }
        
        .is-valid {
            border-color: #198754 !important;
            background-color: #f8fff9;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'%3e%3cpath fill='%23198754' d='M2.3 6.73.6 4.53c-.4-1.04.46-1.4 1.1-.8l1.1 1.4 3.4-3.8c.6-.63 1.6-.27 1.2.7l-4 4.6c-.43.5-.8.4-1.1.1z'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(0.375em + 0.1875rem) center;
            background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
        }
        
        .is-invalid {
            border-color: #dc3545 !important;
            background-color: #fff5f5;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath d='m5.8 3.6.4.4.4-.4'/%3e%3cpath d='M6 7v2'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(0.375em + 0.1875rem) center;
            background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
        }
        
        .form-text {
            font-size: 0.8rem;
            color: #6c757d;
            margin-top: 0.25rem;
        }
        
        .alert {
            border-radius: 8px;
            border: none;
        }
        
        /* KEYFRAMES CORREGIDO - usar @@ para escapar en Razor */
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(-5px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .form-check-input:checked {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
        
        .form-check-input:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }
    </style>
}
@model Entidad

@{
    ViewData["Title"] = "Detalles de Entidad";
     Layout = ViewBag.Layout ?? "_Layout";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="fas fa-building me-2"></i>Detalles de Entidad
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
        </a>
    </div>

    <!-- Alertas -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <!-- Información Principal -->
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Información de la Entidad
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl>
                                <dt>ID:</dt>
                                <dd>@Model.Id</dd>

                                <dt>Nombre:</dt>
                                <dd>@Model.Nombre</dd>

                                <dt>Email:</dt>
                                <dd>@Model.Email</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl>
                                <dt>Dirección:</dt>
                                <dd>@Model.Direccion</dd>

                                <dt>Total Beneficiarios:</dt>
                                <dd>
                                    <span class="badge bg-info">@(Model.Beneficiarios?.Count ?? 0)</span>
                                </dd>

                                <dt>Usuario Asignado:</dt>
                                <dd>
                                    @if (Model.UsuarioId != null)
                                    {
                                        <span class="badge bg-success">Asignado</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No asignado</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Lista de Beneficiarios -->
            @if (Model.Beneficiarios != null && Model.Beneficiarios.Any())
            {
                <div class="card mt-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-users me-2"></i>Beneficiarios Asociados
                            <span class="badge bg-light text-dark ms-2">@Model.Beneficiarios.Count</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>DUI</th>
                                        <th>Teléfono</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var beneficiario in Model.Beneficiarios)
                                    {
                                        <tr>
                                            <td>@beneficiario.Nombre</td>
                                            <td>@beneficiario.Dui</td>
                                            <td>@beneficiario.Telefono</td>
                                            <td>
                                                <span class="badge @(beneficiario.EstadoSubsidio == "pendiente" ? "bg-warning" : "bg-success")">
                                                    @beneficiario.EstadoSubsidio
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Botones de Acción -->
    <div class="card mt-4">
        <div class="card-footer">
            <div class="btn-group">
                <a asp-action="GestionarBeneficiarios" asp-route-id="@Model.Id" 
                   class="btn btn-success">
                    <i class="fas fa-users me-2"></i>Gestionar Beneficiarios
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>Editar Entidad
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="fas fa-trash me-2"></i>Eliminar Entidad
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-list me-2"></i>Volver a la Lista
                </a>
            </div>
        </div>
    </div>
</div>
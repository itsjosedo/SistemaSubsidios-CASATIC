@model IEnumerable<Subsidio>
@{
    ViewData["Title"] = "Solicitudes pendientes";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="fas fa-clock me-2"></i>@ViewData["Title"]
        </h1>
        <a asp-controller="Subsidios" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Volver a subsidios
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Programa</th>
                                <th>Tipo</th>
                                <th>Monto solicitado</th>
                                <th>Beneficiario</th>
                                <th>Fecha solicitud</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var solicitud in Model)
                            {
                                <tr>
                                    <td>@solicitud.NombrePrograma</td>
                                    <td>@solicitud.Tipo</td>
                                    <td>@solicitud.Monto.ToString("C")</td>
                                    <td>@solicitud.Beneficiario?.Nombre</td>
                                    <td>@solicitud.FechaAsignacion.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @{
                                            var badgeClass = solicitud.Estado == "Pendiente" ? "bg-warning" : "bg-info";
                                        }
                                        <span class="badge @badgeClass">@solicitud.Estado</span>
                                    </td>
                                    <td>
                                        <a asp-controller="Subsidios" asp-action="Details" asp-route-id="@solicitud.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                    <h5>No hay solicitudes pendientes</h5>
                    <p class="text-muted">Todas las solicitudes han sido procesadas.</p>
                </div>
            }
        </div>
    </div>
</div>